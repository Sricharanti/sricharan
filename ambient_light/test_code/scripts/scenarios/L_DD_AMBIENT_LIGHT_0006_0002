##############################################################################
# Scenario    : L_DD_AMBIENT_LIGHT_0006_0002
# Author      : Andrii Danylov
# Date        : 09 Jan 2013
# Description : Test Parallel Access from 2 processes
#		Also test parallel access from 2 processes, cat text files
##############################################################################

# Begin L_DD_AMBIENT_LIGHT_0006_0002

# Here 2 UARTs are exercised simultaneously on 2 different CPUs
# Each CPU is doing TX and RX on different ports

01  set -x; handlerProcessParallelism.sh "clean"
02  set -x; handlerProcessParallelism.sh "add" "handlerSysFs.sh set $AMBIENT_LIGHT_ENABLE_POWER $AMBIENT_LIGHT_POWERON_VAL; sleep 1; [ `cat $AMBIENT_LIGHT_SYSFS_PATH/lux` -gt "0" ]"
03  set -x; handlerProcessParallelism.sh "add" "handlerSysFs.sh set $AMBIENT_LIGHT_ENABLE_POWER $AMBIENT_LIGHT_POWERON_VAL; sleep 1; [ `cat $AMBIENT_LIGHT_SYSFS_PATH/lux` -gt "0" ]"
04  set -x; handlerProcessParallelism.sh "execute"; sleep 10

05  set -x; handlerProcessParallelism.sh "clean"
06  set -x; handlerProcessParallelism.sh "add" "[ `cat $AMBIENT_LIGHT_SYSFS_PATH/lux` -gt "0" ]"
07  set -x; handlerProcessParallelism.sh "add" "[ `cat $AMBIENT_LIGHT_SYSFS_PATH/lux` -gt "0" ]"
08  set -x; handlerProcessParallelism.sh "add" "[ `cat $AMBIENT_LIGHT_SYSFS_PATH/lux` -gt "0" ]"
09  set -x; handlerProcessParallelism.sh "add" "[ `cat $AMBIENT_LIGHT_SYSFS_PATH/lux` -gt "0" ]"
10  set -x; handlerProcessParallelism.sh "add" "[ `cat $AMBIENT_LIGHT_SYSFS_PATH/lux` -gt "0" ]"
11  set -x; handlerProcessParallelism.sh "add" "[ `cat $AMBIENT_LIGHT_SYSFS_PATH/lux` -gt "0" ]"
12  set -x; handlerProcessParallelism.sh "add" "[ `cat $AMBIENT_LIGHT_SYSFS_PATH/lux` -gt "0" ]"
13  set -x; handlerProcessParallelism.sh "add" "[ `cat $AMBIENT_LIGHT_SYSFS_PATH/lux` -gt "0" ]"
14  set -x; handlerProcessParallelism.sh "add" "[ `cat $AMBIENT_LIGHT_SYSFS_PATH/lux` -gt "0" ]"
15  set -x; handlerProcessParallelism.sh "add" "[ `cat $AMBIENT_LIGHT_SYSFS_PATH/lux` -gt "0" ]"
16  set -x; handlerProcessParallelism.sh "execute"

# End L_DD_AMBIENT_LIGHT_0006_0002
