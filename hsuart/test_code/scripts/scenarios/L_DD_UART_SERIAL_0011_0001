# Scenario    : L_DD_UART_SERIAL_0011_0001
# Author      : Venkatraman S
# Date        : Sep 23 2009
# Modified by : Govindraj.R
# Modified On : Wed May 04 2010
# Description : Test UART TX and RX CPU Affinity test
#		with 115Kbps, 921Kbps, 3.5Mbps bauds
#		without flowcontrol, with h/w, with s/w flw ctrl
##############################################################################

# Begin L_DD_UART_SERIAL_0011_0001
# The test passes if both files match

01  set -x; handlerCpuAffinity.sh "switch" "handlerHsuart.sh $UART_TEST_PORT1 115200 0" "10" "300"
02  set -x; diff uart_tx_file_$UART_TEST_PORT1 uart_rx_file_$UART_TEST_PORT1 && exit 0 || exit 1

03  set -x; handlerCpuAffinity.sh "switch" "handlerHsuart.sh $UART_TEST_PORT1 115200 1" "10" "300"
04  set -x; diff uart_tx_file_$UART_TEST_PORT1 uart_rx_file_$UART_TEST_PORT1 && exit 0 || exit 1

05  set -x; handlerCpuAffinity.sh "switch" "handlerHsuart.sh $UART_TEST_PORT1 115200 2" "10" "300"
06  set -x; diff uart_tx_file_$UART_TEST_PORT1 uart_rx_file_$UART_TEST_PORT1 && exit 0 || exit 1

07  set -x; handlerCpuAffinity.sh "switch" "handlerHsuart.sh $UART_TEST_PORT1 921600 0" "10" "300"
08  set -x; diff uart_tx_file_$UART_TEST_PORT1 uart_rx_file_$UART_TEST_PORT1 && exit 0 || exit 1

09  set -x; handlerCpuAffinity.sh "switch" "handlerHsuart.sh $UART_TEST_PORT1 921600 1" "10" "300"
10  set -x; diff uart_tx_file_$UART_TEST_PORT1 uart_rx_file_$UART_TEST_PORT1 && exit 0 || exit 1

11  set -x; handlerCpuAffinity.sh "switch" "handlerHsuart.sh $UART_TEST_PORT1 921600 2" "10" "300"
12  set -x; diff uart_tx_file_$UART_TEST_PORT1 uart_rx_file_$UART_TEST_PORT1 && exit 0 || exit 1

13  set -x; handlerCpuAffinity.sh "switch" "handlerHsuart.sh $UART_TEST_PORT1 3500000 0" "10" "300"
14  set -x; diff uart_tx_file_$UART_TEST_PORT1 uart_rx_file_$UART_TEST_PORT1 && exit 0 || exit 1

15  set -x; handlerCpuAffinity.sh "switch" "handlerHsuart.sh $UART_TEST_PORT1 3500000 1" "10" "300"
16  set -x; diff uart_tx_file_$UART_TEST_PORT1 uart_rx_file_$UART_TEST_PORT1 && exit 0 || exit 1

17  set -x; handlerCpuAffinity.sh "switch" "handlerHsuart.sh $UART_TEST_PORT1 3500000 2" "10" "300"
18  set -x; diff uart_tx_file_$UART_TEST_PORT1 uart_rx_file_$UART_TEST_PORT1 && exit 0 || exit 1

# End L_DD_UART_SERIAL_0011_0001
