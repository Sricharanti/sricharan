# Begin L_DD_UART_SERIAL_0011_0003

01  set -x; handlerIrqAffinity.sh "switch" "$TESTSCRIPT/handlerHsuart.sh $UART_TEST_PORT1 3500000 0" "10" "300" "$UART_TEST_PORT1_IRQ"
02  set -x; diff uart_tx_file_$UART_TEST_PORT1 uart_rx_file_$UART_TEST_PORT1 && exit 0 || exit 1

03  set -x; sleep 10

04  set -x; handlerFile.sh "create" "pattern" "$TMPFILE/text.file" "1000"
05  set -x; handlerIrqAffinity.sh "switch" "cat $TMPFILE/text.file" "10" "5" "$UART_TEST_PORT3_IRQ"

# End L_DD_UART_SERIAL_0011_0003
