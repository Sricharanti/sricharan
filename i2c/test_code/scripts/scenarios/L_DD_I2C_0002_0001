# Begin L_DD_I2C_0002_0001

01 set -x; for i in `find /sys/devices/platform/omap/omap_i2c.*/i2c-*/* | grep name`; do echo ==$i==; cat $i; done

02 set -x; i2cdetect -l

# End L_DD_I2C_0002_0001
