# Begin L_DD_I2C_0002_0004

01 set -x; handlerIrqState.sh "omap_i2c" "log" "before"

02 set -x; for i in $I2C_ADDRESSES; do i2cdump -f -y $I2C_ADAPTER_1 $i || exit 1; done

03 set -x; handlerIrqState.sh "omap_i2c" "log" "after"

04 set -x; handlerIrqState.sh "omap_i2c" "compare" "before" "after"

# End L_DD_I2C_0002_0004
