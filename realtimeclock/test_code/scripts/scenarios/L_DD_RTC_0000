0001_01	set -x; $TESTSCRIPT/filesystemtype.sh; cat $TESTSCRIPT/result.tmp | grep $CHIP_NAME | grep rtc && exit 0 || exit 1
0001_02	set -x; echo -e "$APP_VAL_INPUT_USER\n $APP_VALID_DATE\n $APP_VALID_TIME\n" | $APP_TIME_SET $DEVFS_RTC | grep "$MSG_DATE_TIME_SET_NEW ${RTC_VALID_DATE} ${RTC_VALID_TIME}" && exit 0 || exit 1
