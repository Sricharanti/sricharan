# Begin L_DD_RTC_0003

0000  set -x; echo -e "$APP_VAL_INPUT_USER\n $APP_VALID_DATE\n $APP_VALID_TIME\n" | $APP_TIME_SET $DEVFS_RTC && $APP_TIME_GET $DEVFS_RTC | grep "${MSG_OK_DATE_TIME_DEFAULT} ${RTC_VALID_DATE}" && exit 0 || exit 1
0001	set -x; echo -e "$ALARM_SEC\n $ALARM_VALUE\n" | $APP_ALARM_SET $DEVFS_RTC && exit 0 || exit 1
0002	set -x; echo -e "$ALARM_SEC\n $ALARM_VALUE\n" | $APP_ALARM_SET $DEVFS_RTC && $APP_ALARM_GET_EVENT $DEVFS_RTC | grep "${MSG_OK_ALARM_RANG}" && exit 0 || exit 1
0003	set -x; echo -e "$ALARM_SEC\n $ALARM_VALUE\n" | $APP_ALARM_SET $DEVFS_RTC && cat $PROCFS_RTC | grep "alarm_IRQ" | grep "yes" && $APP_ALARM_RESET $DEVFS_RTC && cat $PROCFS_RTC | grep "alarm_IRQ" | grep "no" && exit 0 || exit 1
0004	set -x; echo -e "$ALARM_SEC\n $(echo $ALARM_VALUE+5|bc)\n" | $APP_ALARM_SET $DEVFS_RTC && echo -e "$ALARM_SEC\n $ALARM_VALUE\n" | $APP_ALARM_SET $DEVFS_RTC && $APP_ALARM_GET_EVENT $DEVFS_RTC | grep "${MSG_OK_ALARM_RANG}" && exit 0 || exit 1

# End L_DD_RTC_0003
