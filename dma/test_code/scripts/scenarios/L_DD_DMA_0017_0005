###############################################################################
# Scenario: L_DD_DMA_0017_0005
# Author  : Andrii Danylov
# Date    : 11/30/12
# Testing : CPU idle: CSWR for MPU/CORE/L3/L4 power domains
# Results : Verify MPU/CORE/L3/L4 power domain for RET and RET-LOGIC-OFF counters,
#           they must increases after a period of time through cpu idle path
###############################################################################

# Begin L_DD_DMA_0017_0005

# Set the max screen timeout (30 min)
#0001 set -x; handlerAndroidSqlite3.sh set "system" "screen_off_timeout" "1800000"

# set a dummy wakelock to avoid going to suspend
0002 set -x; handlerAndroidPM.sh wakelock hold dummy

# Turn the display OFF by pressing TWL power key
0003 set -x; android_display_switch.sh OFF

# Verify MPU RET and RET-LOGIC-OFF counters (OSWR) increase during a test period
0004 set -x; handlerPowerTransitionStats.sh log "mpu_pwrdm" "RET" "oswr1"
0005 set -x; handlerPowerTransitionStats.sh log "core_pwrdm" "RET" "oswr1"
0006 set -x; handlerPowerTransitionStats.sh log "l3init_pwrdm" "RET" "oswr1"
0007 set -x; handlerPowerTransitionStats.sh log "l4per_pwrdm" "RET" "oswr1"

0008 set -x; insmod $MODDIR/dma_register_dump.ko
0009 set -x; insmod $MODDIR/dma_single_channel.ko
0010 set -x; insmod $MODDIR/dma_addrmode_constant_oswr.ko
0011 set -x; insmod $MODDIR/dma_oswr_trigger.ko

0012 set -x; echo "Waiting 20 seconds" && sleep 20

0013 set -x; rmmod dma_oswr_trigger
0014 set -x; rmmod dma_addrmode_constant_oswr
0015 set -x; cat /proc/driver/dma_test_status | grep PASS
0016 set -x; rmmod dma_single_channel
0017 set -x; rmmod dma_register_dump

0018 set -x; handlerPowerTransitionStats.sh log "mpu_pwrdm" "RET" "oswr2"
0019 set -x; handlerPowerTransitionStats.sh log "core_pwrdm" "RET" "oswr2"
0020 set -x; handlerPowerTransitionStats.sh log "l3init_pwrdm" "RET" "oswr2"
0021 set -x; handlerPowerTransitionStats.sh log "l4per_pwrdm" "RET" "oswr2"

0022 set -x; handlerPowerTransitionStats.sh compare "mpu_pwrdm" "RET" "oswr1" "oswr2"
0023 set -x; handlerPowerTransitionStats.sh compare "core_pwrdm" "RET" "oswr1" "oswr2"
0024 set -x; handlerPowerTransitionStats.sh compare "l3init_pwrdm" "RET" "oswr1" "oswr2"
0025 set -x; handlerPowerTransitionStats.sh compare "l4per_pwrdm" "RET" "oswr1" "oswr2"

0026 set -x; handlerInputSubsystem.sh "keypad" "KeyCodePowerKey" 1 1 1
0027 set -x; sleep 1; input keyevent $KeyMonkeyMenu; input keyevent $KeyMonkeyHome
0028 set -x; handlerAndroidPM.sh wakelock release dummy

# End L_DD_DMA_0017_0005
