0001	set -x; insmod $TESTMODS/dma_single_channel.ko
0002	set -x; insmod $TESTMODS/dma_burst_mode16.ko
0004	set -x; rmmod dma_burst_mode16
0003  set -x; cat /proc/driver/dma_test_status | grep PASS
0005	set -x; rmmod dma_single_channel

