# Begin L_DD_DMA_0006_OPP4
0001	set -x; opp4.sh
0002	set -x; echo Running on OPP4
0003	set -x; insmod $TESTMODS/dma_single_channel.ko
0004	set -x; insmod $TESTMODS/dma_burst_mode4.ko
0005	set -x; cat /proc/driver/dma_burst_mode4 | grep PASS
0006	set -x; rmmod dma_burst_mode4
0007	set -x; rmmod dma_single_channel
# End L_DD_DMA_0006_OPP4
