###############################################################################
# Scenario: L_DD_DMA_0017_0002
# Author  : Andrii Danylov
# Date    : 11/30/12
# Testing : Retention (OSWR) for MPU, CORE, L3 and L4 power domains
# Results : DMA driver shall use clocks, power domain, voltage domain on a need
#           basis and relinquish when not needed, via the respective manager.
###############################################################################

# Begin L_DD_DMA_0017_0002

# Set the max screen timeout (30 min)
#0001 set -x; handlerAndroidSqlite3.sh set "system" "screen_off_timeout" "1800000"

# Turn the display OFF by pressing TWL power key
0002 set -x; android_display_switch.sh OFF

# Verify MPU RET and RET-LOGIC-OFF counters (OSWR) increase during a test period
0003 set -x; handlerPowerTransitionStats.sh log "mpu_pwrdm" "RET" "oswr1"
0004 set -x; handlerPowerTransitionStats.sh log "mpu_pwrdm" "RET-LOGIC-OFF" "oswr1"
0005 set -x; handlerPowerTransitionStats.sh log "core_pwrdm" "RET" "oswr1"
0006 set -x; handlerPowerTransitionStats.sh log "core_pwrdm" "RET-LOGIC-OFF" "oswr1"
0007 set -x; handlerPowerTransitionStats.sh log "l3init_pwrdm" "RET" "oswr1"
0008 set -x; handlerPowerTransitionStats.sh log "l3init_pwrdm" "RET-LOGIC-OFF" "oswr1"
0009 set -x; handlerPowerTransitionStats.sh log "l4per_pwrdm" "RET" "oswr1"
0010 set -x; handlerPowerTransitionStats.sh log "l4per_pwrdm" "RET-LOGIC-OFF" "oswr1"

0011 set -x; insmod $MODDIR/dma_register_dump.ko
0012 set -x; insmod $MODDIR/dma_single_channel.ko
0013 set -x; insmod $MODDIR/dma_addrmode_constant_oswr.ko
0014 set -x; insmod $MODDIR/dma_oswr_trigger.ko

0015 set -x; sleep 20; $UTILS_DIR_HANDLERS/handlerAndroidPM.sh suspend kernel force 5 && handlerAndroidPM.sh resume kernel || exit 1

0016 set -x; rmmod dma_oswr_trigger
0017 set -x; rmmod dma_addrmode_constant_oswr
0018 set -x; cat /proc/driver/dma_test_status | grep PASS
0019 set -x; rmmod dma_single_channel
0020 set -x; rmmod dma_register_dump

0021 set -x; handlerPowerTransitionStats.sh log "mpu_pwrdm" "RET" "oswr2"
0022 set -x; handlerPowerTransitionStats.sh log "mpu_pwrdm" "RET-LOGIC-OFF" "oswr2"
0023 set -x; handlerPowerTransitionStats.sh log "core_pwrdm" "RET" "oswr2"
0024 set -x; handlerPowerTransitionStats.sh log "core_pwrdm" "RET-LOGIC-OFF" "oswr2"
0025 set -x; handlerPowerTransitionStats.sh log "l3init_pwrdm" "RET" "oswr2"
0026 set -x; handlerPowerTransitionStats.sh log "l3init_pwrdm" "RET-LOGIC-OFF" "oswr2"
0027 set -x; handlerPowerTransitionStats.sh log "l4per_pwrdm" "RET" "oswr2"
0028 set -x; handlerPowerTransitionStats.sh log "l4per_pwrdm" "RET-LOGIC-OFF" "oswr2"

0029 set -x; handlerPowerTransitionStats.sh compare "mpu_pwrdm" "RET" "oswr1" "oswr2"
0030 set -x; handlerPowerTransitionStats.sh compare "mpu_pwrdm" "RET-LOGIC-OFF" "oswr1" "oswr2"
0031 set -x; handlerPowerTransitionStats.sh compare "core_pwrdm" "RET" "oswr1" "oswr2"
0032 set -x; handlerPowerTransitionStats.sh compare "core_pwrdm" "RET-LOGIC-OFF" "oswr1" "oswr2"
0033 set -x; handlerPowerTransitionStats.sh compare "l3init_pwrdm" "RET" "oswr1" "oswr2"
0034 set -x; handlerPowerTransitionStats.sh compare "l3init_pwrdm" "RET-LOGIC-OFF" "oswr1" "oswr2"
0035 set -x; handlerPowerTransitionStats.sh compare "l4per_pwrdm" "RET" "oswr1" "oswr2"
0036 set -x; handlerPowerTransitionStats.sh compare "l4per_pwrdm" "RET-LOGIC-OFF" "oswr1" "oswr2"

# End L_DD_DMA_0017_0002
