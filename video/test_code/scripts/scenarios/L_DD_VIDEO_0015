COMMENT comment.sh "Verify that the video rendered can be up/down scaled in horizontal/vertical direction using HW decimation"

0001 set -x; decimation.sh 1 640 480 "YUYV" $VIDEOFILES/test.yuv 0 0 320 480 && exit 0 || exit 1
0001 set -x; decimation.sh 2 640 480 "YUYV" $VIDEOFILES/test.yuv 0 0 320 480 && exit 0 || exit 1

0002 set -x; decimation.sh 1 640 480 "YUYV" $VIDEOFILES/test.yuv 0 0 160 480 && exit 0 || exit 1
0002 set -x; decimation.sh 2 640 480 "YUYV" $VIDEOFILES/test.yuv 0 0 160 480 && exit 0 || exit 1

0003 set -x; decimation.sh 1 160 120 "RGB565" $VIDEOFILES/video_qqvga_rgb_30 0 0 160 60 && exit 0 || exit 1
0003 set -x; decimation.sh 2 160 120 "RGB565" $VIDEOFILES/video_qqvga_rgb_30 0 0 160 60 && exit 0 || exit 1

0004 set -x; decimation.sh 1 640 480  "YUYV" $VIDEOFILES/test.yuv 0 0 640 120 && exit 0 || exit 1
0004 set -x; decimation.sh 2 640 480 "YUYV" $VIDEOFILES/test.yuv 0 0 640 120 && exit 0 || exit 1

0005 set -x; decimation.sh 1 640 480 "YUYV" $VIDEOFILES/test.yuv 0 0 320 240 && exit 0 || exit 1
0005 set -x; decimation.sh 2 640 480 "YUYV" $VIDEOFILES/test.yuv 0 0 320 240 && exit 0 || exit 1

0006 set -x; decimation.sh 1 640 480 "YUYV" $VIDEOFILES/test.yuv 0 0 160 120 && exit 0 || exit 1
0006 set -x; decimation.sh 2 640 480 "YUYV" $VIDEOFILES/test.yuv 0 0 160 120 && exit 0 || exit 1

0007 set -x; decimation.sh 1 160 120 "RGB565" $VIDEOFILES/video_qqvga_rgb_30 0 0 240 120 && exit 0 || exit 1
0007 set -x; decimation.sh 2 160 120 "RGB565" $VIDEOFILES/video_qqvga_rgb_30 0 0 240 120 && exit 0 || exit 1

0008 set -x; decimation.sh 1 160 120 "RGB565" $VIDEOFILES/video_qqvga_rgb_30 0 0 320 120 && exit 0 || exit 1
0008 set -x; decimation.sh 2 160 120 "RGB565" $VIDEOFILES/video_qqvga_rgb_30 0 0 320 120 && exit 0 || exit 1

0009 set -x; decimation.sh 1 160 120 "RGB565" $VIDEOFILES/video_qqvga_rgb_30 0 0 160 180 && exit 0 || exit 1
0009 set -x; decimation.sh 2 160 120 "RGB565" $VIDEOFILES/video_qqvga_rgb_30 0 0 160 180 && exit 0 || exit 1

0010 set -x; decimation.sh 1 160 120 "RGB565" $VIDEOFILES/video_qqvga_rgb_30 0 0 160 240 && exit 0 || exit 1
0010 set -x; decimation.sh 2 160 120 "RGB565" $VIDEOFILES/video_qqvga_rgb_30 0 0 160 240 && exit 0 || exit 1

0011 set -x; decimation.sh 1 160 120 "RGB565" $VIDEOFILES/video_qqvga_rgb_30 0 0 240 180 && exit 0 || exit 1
0011 set -x; decimation.sh 2 160 120 "RGB565" $VIDEOFILES/video_qqvga_rgb_30 0 0 240 180 && exit 0 || exit 1

0012 set -x; decimation.sh 1 160 120 "RGB565" $VIDEOFILES/video_qqvga_rgb_30 0 0 320 240 && exit 0 || exit 1
0012 set -x; decimation.sh 2 160 120 "RGB565" $VIDEOFILES/video_qqvga_rgb_30 0 0 320 240 && exit 0 || exit 1

0013 set -x; decimation.sh 1 160 120 "RGB565" $VIDEOFILES/video_qqvga_rgb_30 0 0 240 60 && exit 0 || exit 1
0013 set -x; decimation.sh 2 160 120 "RGB565" $VIDEOFILES/video_qqvga_rgb_30 0 0 240 60 && exit 0 || exit 1

