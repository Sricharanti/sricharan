# Begin "L_DD_VIDEO_0004"

SETUP_VD1 set -x; $TESTBIN/setimg 1 RGB565 160 120 && exit 0 || exit 1
SETUP_VD2 set -x; $TESTBIN/setimg 2 RGB565 160 120 && exit 0 || exit 1

# Testing Mirror on Video Pipeline 1

0001_COMMENT_VD1 comment.sh "Video Pipeline 1 - Image shall be mirrored"
0001_VD1 set -x; mirrorstream.sh 1 1 $VIDEOFILES/video_qqvga_rgb_30 && exit 0 || exit 1

COMMENT_VD1 comment.sh "Image shall be mirrored only on Video Pipeline 1"
0002_VD1 set -x; $TESTROOT/test_runner.sh -p -I $STRESSARG L_DD_VIDEO_0001 && exit 0 || exit 1
0003_VD1 set -x; $TESTROOT/test_runner.sh -p -I $STRESSARG L_DD_VIDEO_0002 && exit 0 || exit 1
0004_VD1 set -x; $TESTROOT/test_runner.sh -p -I $STRESSARG L_DD_VIDEO_0003 && exit 0 || exit 1

0005_COMMENT_VD1 comment.sh "Image shall not be mirrored on Video Pipeline 1"
0005_VD1 set -x; mirrorstream.sh 1 0 $VIDEOFILES/video_qqvga_rgb_30 && exit 0 || exit 1

# Testing Mirror on Video Pipeline 2

0006_COMMENT_VD2 comment.sh "Video Pipeline 2 - Image shall be mirrored"
0006_VD2 set -x; mirrorstream.sh 2 1 $VIDEOFILES/video_qqvga_rgb_30 && exit 0 || exit 1

COMMENT_VD2 comment.sh "Image shall be mirrored only on Video Pipeline 2"
0007_VD2 set -x; $TESTROOT/test_runner.sh -p -I $STRESSARG L_DD_VIDEO_0001 && exit 0 || exit 1
0008_VD2 set -x; $TESTROOT/test_runner.sh -p -I $STRESSARG L_DD_VIDEO_0002 && exit 0 || exit 1
0009_VD2 set -x; $TESTROOT/test_runner.sh -p -I $STRESSARG L_DD_VIDEO_0003 && exit 0 || exit 1

0010_COMMENT_VD2 comment.sh "Image shall not be mirrored on Video Pipeline 2"
0010_VD2 set -x; mirrorstream.sh 2 0 $VIDEOFILES/video_qqvga_rgb_30 && exit 0 || exit 1

# End "L_DD_VIDEO_0004"
