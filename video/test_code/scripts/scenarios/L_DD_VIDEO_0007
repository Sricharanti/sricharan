COMMENT comment.sh "The board should be booted with 0 degrees rotation: videoout=omap24xxvout:rotation=0"

0001_COMMENT_ROT90 comment.sh "The images shall be rotated 90 degrees"
0001_ROT90 set -x; $TESTBIN/setrotation 1 90 && exit 0 || exit 1
0001_ROT90 set -x; $TESTBIN/setrotation 2 90 && exit 0 || exit 1
0001_ROT90 set -x; $TESTROOT/test_runner.sh -p -I $STRESSARG L_DD_VIDEO_0001 && exit 0 || exit 1
0001_ROT90 set -x; $TESTROOT/test_runner.sh -p -I $STRESSARG L_DD_VIDEO_0002 && exit 0 || exit 1
0001_ROT90 set -x; $TESTROOT/test_runner.sh -p -I $STRESSARG L_DD_VIDEO_0003 && exit 0 || exit 1
0001_ROT90 set -x; $TESTROOT/test_runner.sh -p -I $STRESSARG L_DD_VIDEO_0004 && exit 0 || exit 1
0001_ROT90 set -x; $TESTROOT/test_runner.sh -p -I $STRESSARG L_DD_VIDEO_0005 && exit 0 || exit 1
0001_ROT90 set -x; $TESTROOT/test_runner.sh -p -I $STRESSARG L_DD_VIDEO_0006 && exit 0 || exit 1

0002_COMMENT_ROT180 comment.sh "The images shall be rotated 180 degrees"
0002_ROT180 set -x; $TESTBIN/setrotation 1 180 && exit 0 || exit 1
0002_ROT180 set -x; $TESTBIN/setrotation 2 180 && exit 0 || exit 1
0002_ROT180 set -x; $TESTROOT/test_runner.sh -p -I $STRESSARG L_DD_VIDEO_0001 && exit 0 || exit 1
0002_ROT180 set -x; $TESTROOT/test_runner.sh -p -I $STRESSARG L_DD_VIDEO_0002 && exit 0 || exit 1
0002_ROT180 set -x; $TESTROOT/test_runner.sh -p -I $STRESSARG L_DD_VIDEO_0003 && exit 0 || exit 1
0002_ROT180 set -x; $TESTROOT/test_runner.sh -p -I $STRESSARG L_DD_VIDEO_0004 && exit 0 || exit 1
0002_ROT180 set -x; $TESTROOT/test_runner.sh -p -I $STRESSARG L_DD_VIDEO_0005 && exit 0 || exit 1
0002_ROT180 set -x; $TESTROOT/test_runner.sh -p -I $STRESSARG L_DD_VIDEO_0006 && exit 0 || exit 1

0003_COMMENT_ROT270 comment.sh "The images shall be rotated 270 degrees"
0003_ROT270  set -x; $TESTBIN/setrotation 1 270 && exit 0 || exit 1
0003_ROT270  set -x; $TESTBIN/setrotation 2 270 && exit 0 || exit 1
0003_ROT270  set -x; $TESTROOT/test_runner.sh -p -I $STRESSARG L_DD_VIDEO_0001 && exit 0 || exit 1
0003_ROT270  set -x; $TESTROOT/test_runner.sh -p -I $STRESSARG L_DD_VIDEO_0002 && exit 0 || exit 1
0003_ROT270  set -x; $TESTROOT/test_runner.sh -p -I $STRESSARG L_DD_VIDEO_0003 && exit 0 || exit 1
0003_ROT270  set -x; $TESTROOT/test_runner.sh -p -I $STRESSARG L_DD_VIDEO_0004 && exit 0 || exit 1
0003_ROT270  set -x; $TESTROOT/test_runner.sh -p -I $STRESSARG L_DD_VIDEO_0005 && exit 0 || exit 1
0003_ROT270  set -x; $TESTROOT/test_runner.sh -p -I $STRESSARG L_DD_VIDEO_0006 && exit 0 || exit 1

INFO comment.sh "The images shall be reset to 0 degrees"
END set -x; $TESTBIN/setrotation 1 0 && exit 0 || exit 1
END set -x; $TESTBIN/setrotation 2 0 && exit 0 || exit 1
