foo	echo L_DD_USBOHCI_0001_core

1  echo -e "\n\n\t Please connect USB "$DEVICE_NAME" device to the USB port. \n\n" && sleep $DELAY2  &&  exit 0 || exit 1
#${KEY_PATH}/waitkey "Press a key after the device is connected."  &&  exit 0 || exit 1

2  echo -e "\n\n\t Checking if device is connected \n\n"  &&  $TESTSCRIPT/enum.sh connectDevice  &&  exit 0 || exit 1

3  echo -e "\n\n\t Checking if device info is present \n\n"  &&  $TESTSCRIPT/enum.sh checkinfoDevice  &&  exit 0 || exit 1

4  echo -e "\n\n\t Checking device speed. \n\n"  &&  $TESTSCRIPT/enum.sh checkspeedDevice  &&  exit 0 || exit 1

5  set -x; echo $DEVICE_NAME; if [ "$DEVICE_NAME" != "hub" ]; then echo -e "\n\n\t Disconnect USB "$DEVICE_NAME" from the USB port. \n\n"  &&  $TESTSCRIPT/enum.sh disconnectDevice  &&  sleep $DELAY2  && exit 0 || exit 1; fi
#  &&  ${KEY_PATH}/waitkey "Press a key after the device is disconnected"  && exit 0 || exit 1; fi

bar	echo L_DD_USBOHCI_0001_core
