foo	echo L_DD_USBOTG_0005_1_core

1  echo -e '\n\n\t Connect USB cable ( MiniB OMAP - Windows Host StdA ) \n\n'  &&  sleep $DELAY0  &&  $KEY_PATH/waitkey "Press a key when USB cable is connected to Windows PC"  &&  exit 0  ||  exit 1

2  echo -e '\n\n\t Run -OTG tests- in the USBCV application \n\n'  &&  exit 0  ||  exit 1

3  sleep $DELAY0  &&  $KEY_PATH/waitkey "Press a key to continue"  &&  exit 0  ||  exit 1

4  echo -e '\n\n\t Did USBCV-OTG Tests- pass? \n\n'  &&  sleep $DELAY0  &&  $KEY_PATH/akey  &&  exit 0  ||  exit 1

bar	echo L_DD_USBOTG_0005_1_core
