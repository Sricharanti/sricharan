foo 	echo "L_DD_SDIO_0006C"

0004	echo $HOTPLUG_DISABLE > $HOTPLUG_DEV1 && echo "Insert and remove SDIO card into/from slot 1 several times" && echo "Criteria: SDIO card should not be detected" && sleep 1 && $UTILBIN/akey && exit 0 || exit 1
0005	rm -f /sdio.msg && echo $HOTPLUG_ENABLE > $HOTPLUG_DEV1 && echo "Insert SDIO card into slot 1" && sleep 1 && $UTILBIN/waitkey && insmod $TESTMODS/$SDIO_MOD && cmp /sdio.msg $SDIO_MANUF_FILE && rmmod $SDIO_MOD && echo "Remove SDIO card from slot 1" && sleep 1 && $UTILBIN/waitkey && exit 0 || exit 1

bar 	echo "L_DD_SDIO_0006C"
