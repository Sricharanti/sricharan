###############################################################################
# Scenario: L_DD_TIMER_0008_0007
# Author  : Andrii Danylov
# Date    : 12/04/12
# Testing : CPU idle: OSWR for MPU/CORE/L3 power domains
# Results : Verify MPU/CORE/L3 power domain for RET and RET-LOGIC-OFF counters,
#           they must increases after a period of time through cpu idle path
###############################################################################

# Begin L_DD_TIMER_0008_0007

# Set the max screen timeout (30 min)
#0001 set -x; handlerAndroidSqlite3.sh set "system" "screen_off_timeout" "1800000"

# set a dummy wakelock to avoid going to suspend
0002 set -x; handlerAndroidPM.sh wakelock hold dummy

# Turn the display OFF by pressing TWL power key
0003 set -x; android_display_switch.sh OFF

# Verify MPU RET and RET-LOGIC-OFF counters (OSWR) increase during a test period
0004 set -x; handlerPowerTransitionStats.sh log "mpu_pwrdm" "RET" "oswr1"
0005 set -x; handlerPowerTransitionStats.sh log "mpu_pwrdm" "RET-LOGIC-OFF" "oswr1"
0006 set -x; handlerPowerTransitionStats.sh log "core_pwrdm" "RET" "oswr1"
0007 set -x; handlerPowerTransitionStats.sh log "core_pwrdm" "RET-LOGIC-OFF" "oswr1"
0008 set -x; handlerPowerTransitionStats.sh log "l3init_pwrdm" "RET" "oswr1"
0009 set -x; handlerPowerTransitionStats.sh log "l3init_pwrdm" "RET-LOGIC-OFF" "oswr1"

0010 set -x; (($TESTSCRIPT/requestTimerNumber.sh 2 && $TESTSCRIPT/requestTimerNumber.sh 10) &); echo "Waiting 20 seconds" && sleep 20

0011 set -x; handlerPowerTransitionStats.sh log "mpu_pwrdm" "RET" "oswr2"
0012 set -x; handlerPowerTransitionStats.sh log "mpu_pwrdm" "RET-LOGIC-OFF" "oswr2"
0013 set -x; handlerPowerTransitionStats.sh log "core_pwrdm" "RET" "oswr2"
0014 set -x; handlerPowerTransitionStats.sh log "core_pwrdm" "RET-LOGIC-OFF" "oswr2"
0015 set -x; handlerPowerTransitionStats.sh log "l3init_pwrdm" "RET" "oswr2"
0016 set -x; handlerPowerTransitionStats.sh log "l3init_pwrdm" "RET-LOGIC-OFF" "oswr2"

0017 set -x; handlerPowerTransitionStats.sh compare "mpu_pwrdm" "RET" "oswr1" "oswr2"
0018 set -x; handlerPowerTransitionStats.sh compare "mpu_pwrdm" "RET-LOGIC-OFF" "oswr1" "oswr2"
0019 set -x; handlerPowerTransitionStats.sh compare "core_pwrdm" "RET" "oswr1" "oswr2"
0020 set -x; handlerPowerTransitionStats.sh compare "core_pwrdm" "RET-LOGIC-OFF" "oswr1" "oswr2"
0021 set -x; handlerPowerTransitionStats.sh compare "l3init_pwrdm" "RET" "oswr1" "oswr2"
0022 set -x; handlerPowerTransitionStats.sh compare "l3init_pwrdm" "RET-LOGIC-OFF" "oswr1" "oswr2"

0023 set -x; handlerInputSubsystem.sh "keypad" "KeyCodePowerKey" 1 1 1
0024 set -x; sleep 1; input keyevent $KeyMonkeyMenu; input keyevent $KeyMonkeyHome
0025 set -x; handlerAndroidPM.sh wakelock release dummy

# End L_DD_TIMER_0008_0007
