# Scenario: L_DD_USBDevice_0009_core
# Author  : Axel Castaneda Gonzalez
# Date    : January 19, 2006
# Description: Testing the suspend and resume functionality of the USB
# ChangeLog:
#	25 Feb 2009 - Diego Zavala Trujillo - Update Scenario.
###############################################################################

foo	echo L_DD_USBDevice_0009_core

1	echo -e "\n\n\t Please connect cable. [ MiniB to OMAP - Std-A to LinuxPC ] \n"  &&  sleep $DELAY3  &&  $TESTSCRIPT/enum.sh connectHost  && exit 0 || exit 1

2	echo -e '\n\n\t Checking enumeration on the Linux PC \n\n' && $TESTSCRIPT/enum.sh connectHostRemote  &&  exit 0 || exit 1

### Suspending

3	echo -e "\n\n\t Suspending the System on the OMAP. \n\t Please check enumeration on the LinuxPC, \n\t (the LinuxPC should not detect the OMAP). \n\t Rember to do a 'cat /proc/bus/usb/device | grep ${ENUM_INFO} \n\t And afterwars press any key to resume the System on the OMAP. \n\n"  &&  echo -n mem > $SLEEP_STATE  &&  exit 0 || exit 1

4	echo -e '\n\n\t Checking enumeration on the Linux PC \n\n' && $TESTSCRIPT/enum.sh connectHostRemote  &&  exit 0 || exit 1

5	echo -e "\n\n\t Suspending the System on the OMAP. \n\t Please check enumeration on the LinuxPC, \n\t (the LinuxPC should not detect the OMAP). \n\t Rember to do a 'cat /proc/bus/usb/device | grep ${ENUM_INFO} \n\t And afterwars press any key to resume the System on the OMAP. \n\n"  &&  echo -n mem > $SLEEP_STATE  &&  exit 0 || exit 1

6	echo -e '\n\n\t Checking enumeration on the Linux PC \n\n' && $TESTSCRIPT/enum.sh connectHostRemote  &&  exit 0 || exit 1

bar	echo L_DD_USBDevice_0009_core
