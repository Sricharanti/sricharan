foo	echo L_DD_USBDevice_0004_core

1  echo -e '\n\n\t Please connect USB cable [ MiniB to OMAP - Host Std-A to Windows PC ] \n\n'  &&  sleep $DELAY0  &&  ${KEY_PATH}/waitkey "Press a key when USB cable is connected to Windows PC"  &&  exit 0 || exit 1

2  echo -e "\n\n\t Run -Chapter 9 tests- for $GADGET_NAME in the USBCV application. \n\n"  &&  exit 0 || exit 1

3  for i in $COUNT_SET ; do sleep $DELAY0 ; ${KEY_PATH}/waitkey "$MESSAGE" ; echo -n 1 > $PROC_INT ; done && exit 0 || exit 1

4  echo -e "\n\n\t Run -Chapter 9 tests- for $GADGET_NAME in the USBCV application. \n\n"   && exit 0 || exit 1

5  for i in $COUNT_SET ; do sleep $DELAY0 ; ${KEY_PATH}/waitkey "$MESSAGE" ; echo -n 1 > $PROC_INT ; done && exit 0 || exit 1

6  echo -e '\n\n\t Disconnect the USB cable and then connect it again  \n\n' && sleep $DELAY2 &&  ${KEY_PATH}/waitkey "$Press a key to continue" && exit 0 ||  exit 1

7  echo -e "\n\n\t Run -Chapter 9 tests- for $GADGET_NAME in the USBCV application \n\n "   && exit 0 || exit 1

8  for i in $COUNT_SET ; do sleep 1 ; ${KEY_PATH}/waitkey "$MESSAGE" ; echo -n 1 > $PROC_INT ; done && exit 0 || exit 1

9  echo -e '\n\n\t Did USBCV -Chapter 9 tests- pass?  \n\n' && sleep 1 && ${KEY_PATH}/akey && exit 0 ||  exit 1

bar echo L_DD_USBDevice_0004_core
