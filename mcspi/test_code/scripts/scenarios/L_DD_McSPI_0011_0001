# Begin L_DD_McSPI_0011_0001
0001	set -x; insmod $MODDIR/omap_mcspi_datatest.ko slave_mode=1 
0002	set -x; $TESTROOT/../../utils/scripts/dvfs.opp.sh 
0003	set -x; echo rx > /proc/driver/mcspi_test/transmission
0004	set -x; echo tx > /proc/driver/mcspi_test/transmission
0005	set -x; echo txrx > /proc/driver/mcspi_test/transmission
0006	set -x; dmesg | grep SUCCESS
0007	set -x; rmmod omap_mcspi_datatest
0008	set -x; dmesg -c
# End L_DD_McSPI_0011_0001
