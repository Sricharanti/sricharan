# Begin L_DD_NAND_0006

0000 set -x; test -d $DEFAULT_MOUNT_POINT || mkdir $DEFAULT_MOUNT_POINT
0000 set -x; $TESTBIN/flash_eraseall $JFFS_OPTIONS $MTD_CHAR_DEV1 && mount -t jffs2 $MTD_BLK_DEV1 $DEFAULT_MOUNT_POINT && mount | grep "$DEFAULT_MOUNT_POINT" && exit 0 || exit 1
0001 set -x; $TESTBIN/Bonnie -d $DEFAULT_MOUNT_POINT -s 1 && exit 0 || exit 1
0000 set -x; umount $DEFAULT_MOUNT_POINT && test -d $DEFAULT_MOUNT_POINT && rm -r $DEFAULT_MOUNT_POINT && exit 0 || exit 1

# End L_DD_NAND_0006
