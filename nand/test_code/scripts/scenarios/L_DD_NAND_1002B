setup   test -d $DEFAULT_MOUNT_POINT || mkdir $DEFAULT_MOUNT_POINT
0001    mount -t jffs2 $MTD_BLK_DEV1 $DEFAULT_MOUNT_POINT && cat $DEFAULT_MOUNT_POINT/boot_log | grep "Boot: OK" && umount $DEFAULT_MOUNT_POINT && $TESTBIN/flash_eraseall $JFFS_OPTIONS $MTD_CHAR_DEV1 && exit 0 || exit 1
