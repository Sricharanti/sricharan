###############################################################################
# Scenario: L_DD_POWER_1010_0024
# Author  : Leed Aguilar
# Date    : 11/11/11
# Testing : Verify OSWR for CORE power domain after an AV playback (PB) usecase
#           in Android OS
# Results : Verify CORE power domain for RET and RET-LOGIC-OFF counters, these
#           must increase after a period of time through cpu idle path once
#           the AV PB usecase is completed
###############################################################################

# Begin L_DD_POWER_1010_0024

# Set the max screen timeout (30 min)
0001 set -x; handlerAndroidSqlite3.sh set "system" "screen_off_timeout" "1800000"

# set a dummy wakelock to avoid going to suspend
0002 set -x; handlerAndroidPM.sh wakelock hold dummy

# Verify that the screen is ON
0003 set -x; android_display_switch.sh ON

# Start AV playback usecase
0004 set -x; handlerActivityManager.sh av_playback_ics start $MP4_FILE && sleep 15

# Stop playback and close Gallery app
# NOTE: Avoid sending a Android PlayPause event because it may open the Audio app
0005 set -x; handlerAndroidMonkey.sh keypad 1 800 KeyMonkeyHome && sleep 1
0006 set -x; handlerActivityManager.sh av_playback_ics stop

# Turn off the display by pressing TWL power key
0007 set -x; android_display_switch.sh OFF

# Verify CORE RET and RET-LOGIC-OFF counters (OSWR) increase during a test period
0008 set -x; handlerPowerTransitionStats.sh log "core_pwrdm" "RET" "oswr1"
0009 set -x; handlerPowerTransitionStats.sh log "core_pwrdm" "RET-LOGIC-OFF" "oswr1"
0010 set -x; echo "Waiting 20 seconds" && sleep 20
0011 set -x; handlerPowerTransitionStats.sh log "core_pwrdm" "RET" "oswr2"
0012 set -x; handlerPowerTransitionStats.sh log "core_pwrdm" "RET-LOGIC-OFF" "oswr2"
0013 set -x; handlerPowerTransitionStats.sh compare "core_pwrdm" "RET" "oswr1" "oswr2"
0014 set -x; handlerPowerTransitionStats.sh compare "core_pwrdm" "RET-LOGIC-OFF" "oswr1" "oswr2"

0015 set -x; handlerInputSubsystem.sh "keypad" "KeyCodePowerKey" 1 1 1
0016 set -x; sleep 1; input keyevent $KeyMonkeyMenu; input keyevent $KeyMonkeyHome
0017 set -x; handlerAndroidPM.sh wakelock release dummy

# End L_DD_POWER_1010_0024
