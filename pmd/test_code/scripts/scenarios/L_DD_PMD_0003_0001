###############################################################################
# Scenario: L_DD_POWER_0003_0001
# Testing : Enabling system for hitting OFF, enable/disable
###############################################################################

# Begin L_DD_POWER_0003_0001

01  set -x; debugFileSystem.sh "mount"
02  set -x; debugFileSystem.sh "log" "core_pwrdm" "OFF" "1"

03  set -x; echo $ENABLE > $SLEEP_WHILE_IDLE
04  set -x; echo $ENABLE > $ENABLED_OFF_MODE
05  set -x; echo $ENABLE > $VOLTAGE_OFF_WHILE_IDLE && sleep 5

06  set -x; debugFileSystem.sh "log" "core_pwrdm" "OFF" "2"
07  set -x; debugFileSystem.sh "compare" "1" "2" && sleep 2 && exit 0 || exit 1

08  set -x; echo $DISABLE > $SLEEP_WHILE_IDLE
09  set -x; echo $DISABLE > $ENABLED_OFF_MODE
10  set -x; echo $DISABLE > $VOLTAGE_OFF_WHILE_IDLE

11  set -x; debugFileSystem.sh "umount"

# End L_DD_POWER_0003_0001