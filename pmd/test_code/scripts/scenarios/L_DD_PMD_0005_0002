###############################################################################
# Scenario: L_DD_POWER_0005_0002
# Testing : OPPs Control: Requesting/Confirming OPPs
###############################################################################

# Begin L_DD_POWER_0005_0002

01  set -x; smartReflexAutoComp.sh  enable  VDD1
02  set -x; smartReflexAutoComp.sh  enable  VDD2

03  set -x; oppControl.sh  request  VDD1  1
04  set -x; oppControl.sh  request  VDD1  2
05  set -x; oppControl.sh  request  VDD1  3
06  set -x; oppControl.sh  request  VDD1  4
07  set -x; oppControl.sh  request  VDD1  5
08  set -x; oppControl.sh  request  VDD1  3

09  set -x; oppControl.sh  request  VDD2  1  && exit 1 || exit 0
10  set -x; oppControl.sh  request  VDD2  2  && exit 0 || exit 1
11  set -x; oppControl.sh  request  VDD2  3  && exit 0 || exit 1
12  set -x; oppControl.sh  request  VDD2  4  && exit 1 || exit 0
13  set -x; oppControl.sh  request  VDD2  5  && exit 1 || exit 0
14  set -x; oppControl.sh  request  VDD2  3  && exit 1 || exit 0

15  set -x; smartReflexAutoComp.sh  disable  VDD1
16  set -x; smartReflexAutoComp.sh  disable  VDD2

# End L_DD_POWER_0005_0002
