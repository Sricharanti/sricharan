###############################################################################
# Scenario: L_DD_POWER_1010_0022
# Author  : Leed Aguilar
# Date    : 11/11/11
# Testing : CPU idle: OSWR for CORE pwr domain
# Results : Verify CORE power domain for RET and RET-LOGIC-OFF counters, they
#           must increases after a period of time through cpu idle path
###############################################################################

# Begin L_DD_POWER_1010_0022

# Set the max screen timeout (30 min)
0001 set -x; handlerAndroidSqlite3.sh set "system" "screen_off_timeout" "1800000"

# set a dummy wakelock to avoid going to suspend
0002 set -x; handlerAndroidPM.sh wakelock hold dummy

# Turn the display OFF by pressing TWL power key
0003 set -x; android_display_switch.sh OFF

# Verify CORE RET and RET-LOGIC-OFF counters (OSWR) increase during a test period
0004 set -x; handlerPowerTransitionStats.sh log "core_pwrdm" "RET" "oswr1"
0005 set -x; handlerPowerTransitionStats.sh log "core_pwrdm" "RET-LOGIC-OFF" "oswr1"
0006 set -x; echo "Waiting 20 seconds" && sleep 20
0007 set -x; handlerPowerTransitionStats.sh log "core_pwrdm" "RET" "oswr2"
0008 set -x; handlerPowerTransitionStats.sh log "core_pwrdm" "RET-LOGIC-OFF" "oswr2"
0009 set -x; handlerPowerTransitionStats.sh compare "core_pwrdm" "RET" "oswr1" "oswr2"
0010 set -x; handlerPowerTransitionStats.sh compare "core_pwrdm" "RET-LOGIC-OFF" "oswr1" "oswr2"

0011 set -x; handlerInputSubsystem.sh "keypad" "KeyCodePowerKey" 1 1 1
0012 set -x; sleep 1; input keyevent $KeyMonkeyMenu; input keyevent $KeyMonkeyHome
0013 set -x; handlerAndroidPM.sh wakelock release dummy

# End L_DD_POWER_1010_0022
