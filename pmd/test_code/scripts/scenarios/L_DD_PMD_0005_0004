###############################################################################
# Scenario: L_DD_POWER_0005_0004
# Testing : OPPs Control: Requesting/Confirming OPPs with suspend and resume
###############################################################################

# Begin L_DD_POWER_0005_0004

00  set -x; debugFileSystem.sh "mount"

01  set -x; smartReflexAutoComp.sh  enable  VDD1
02  set -x; smartReflexAutoComp.sh  enable  VDD2

03  set -x; echo "userspace" > /sys/devices/system/cpu/cpu0/cpufreq/scaling_governor

04  set -x; suspendResume.sh  "suspend"  $WAKEUP_TIMER_DEFAULT_VALUE

05  set -x; oppControl.sh  request  VDD1  300000
06  set -x; suspendResume.sh  "suspend"  $WAKEUP_TIMER_DEFAULT_VALUE
07  set -x; oppControl.sh  request  VDD1  600000
08  set -x; suspendResume.sh  "suspend"  $WAKEUP_TIMER_DEFAULT_VALUE
09  set -x; oppControl.sh  request  VDD1  800000
10  set -x; suspendResume.sh  "suspend"  $WAKEUP_TIMER_DEFAULT_VALUE
11  set -x; oppControl.sh  request  VDD1  1000000
12  set -x; suspendResume.sh  "suspend"  $WAKEUP_TIMER_DEFAULT_VALUE
13  set -x; oppControl.sh  request  VDD1  300000
14  set -x; suspendResume.sh  "suspend"  $WAKEUP_TIMER_DEFAULT_VALUE

15  set -x; oppControl.sh  request  VDD2  260000000  && exit 0 || exit 1
16  set -x; suspendResume.sh  "suspend"  $WAKEUP_TIMER_DEFAULT_VALUE
17  set -x; oppControl.sh  request  VDD2  520000000  && exit 0 || exit 1
18  set -x; suspendResume.sh  "suspend"  $WAKEUP_TIMER_DEFAULT_VALUE
19  set -x; oppControl.sh  request  VDD2  660000000  && exit 0 || exit 1
20  set -x; suspendResume.sh  "suspend"  $WAKEUP_TIMER_DEFAULT_VALUE
21  set -x; oppControl.sh  request  VDD2  800000000  && exit 0 || exit 1
22  set -x; suspendResume.sh  "suspend"  $WAKEUP_TIMER_DEFAULT_VALUE
23  set -x; oppControl.sh  request  VDD2  260000000  && exit 0 || exit 1
24  set -x; suspendResume.sh  "suspend"  $WAKEUP_TIMER_DEFAULT_VALUE

25  set -x; smartReflexAutoComp.sh  disable  VDD1
26  set -x; smartReflexAutoComp.sh  disable  VDD2

37  set -x; suspendResume.sh  "suspend"  $WAKEUP_TIMER_DEFAULT_VALUE

# End L_DD_POWER_0005_0002
