0001	echo "L_DD_AUDIO-ALSA_23862"
0002	audio-tool save $TMPBASE/audio.cfg && audio-tool reset
0003	audio-tool config play Multimedia Headset enable
0004	set -x; handlerProcessParallelism.sh "clean"
0005	set -x; handlerProcessParallelism.sh "add" "audio-tool tone sine 1000 16 -c 2 -r 48000 -b 16 -d 0 -t 18"
0006	set -x; handlerProcessParallelism.sh "add" "sleep 3; audio-tool mix 'DL1 Equalizer' 'Flat response'"
0007	set -x; handlerProcessParallelism.sh "add" "sleep 6; audio-tool mix 'DL1 Equalizer' 'High-pass 0dB'"
0008	set -x; handlerProcessParallelism.sh "add" "sleep 9; audio-tool mix 'DL1 Equalizer' 'High-pass -12dB'"
0009	set -x; handlerProcessParallelism.sh "add" "sleep 12; audio-tool mix 'DL1 Equalizer' 'High-pass -20dB'"
0010	set -x; handlerProcessParallelism.sh "add" "sleep 15; audio-tool mix 'DL1 Equalizer' '4Khz LPF   0dB'"
0011	set -x; handlerProcessParallelism.sh "execute"
0012	audio-tool restore $TMPBASE/audio.cfg
