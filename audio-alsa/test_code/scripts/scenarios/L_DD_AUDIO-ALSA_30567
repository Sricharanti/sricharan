0001	echo "L_DD_AUDIO-ALSA_30567"
0002	audio-tool save $TMPBASE/audio.cfg && audio-tool reset
0003	audio-tool config play Multimedia Headset enable
0004	set -x; handlerProcessParallelism.sh "clean"
0005	set -x; handlerProcessParallelism.sh "add" "audio-tool tone sine 1000 16 -c 2 -r 48000 -b 16 -d 0 -t 10"
0006	set -x; handlerProcessParallelism.sh "add" "sleep 5; audio-tool config play Multimedia Handsfree enable"
0007	set -x; handlerProcessParallelism.sh "execute"
0008	audio-tool reset
0009	audio-tool config play Multimedia Headset enable
0010	audio-tool config play Multimedia Handsfree enable
0011	set -x; handlerProcessParallelism.sh "clean"
0012	set -x; handlerProcessParallelism.sh "add" "audio-tool tone sine 1000 16 -c 2 -r 48000 -b 16 -d 0 -t 10"
0013	set -x; handlerProcessParallelism.sh "add" "sleep 5; audio-tool mix 'DL1 PDM_DL2 Switch' 0"
0014	set -x; handlerProcessParallelism.sh "execute"
0015	audio-tool restore $TMPBASE/audio.cfg
