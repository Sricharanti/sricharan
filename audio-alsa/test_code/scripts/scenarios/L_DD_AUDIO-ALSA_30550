0001	echo "L_DD_AUDIO-ALSA_30550"
0002	audio-tool save $TMPBASE/audio.cfg && audio-tool reset
0003	audio-tool config cap Voice HeadsetMic enable
0004	audio-tool cap $TMPBASE/rec.wav -c 3 -r 16000 -b 16 -d 2 -t 5 || exit 0
0005	audio-tool restore $TMPBASE/audio.cfg