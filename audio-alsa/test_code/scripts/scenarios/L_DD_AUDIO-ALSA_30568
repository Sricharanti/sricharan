0001	echo "L_DD_AUDIO-ALSA_30568"
0002	audio-tool save $TMPBASE/audio.cfg && audio-tool reset
0003	audio-tool config play Multimedia Headset enable
0004	audio-tool tone sine 1000 16 -c 2 -r 48000 -b 16 -d 0 -m 1 -t 5
0005	audio-tool tone sine 1000 16 -c 2 -r 48000 -b 16 -d 0 -m 2 -t 5
0006	audio-tool tone sine 1000 16 -c 2 -r 48000 -b 16 -d 0 -m 3 -t 5
0007	audio-tool restore $TMPBASE/audio.cfg