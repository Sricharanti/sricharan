0000_1	set -x; $TESTSCRIPT/CheckPreconditions.sh $SAMPLESDIR
0000_2	set -x; $TESTSCRIPT/OMAP4ClearPaths.sh "Playback" && exit 0 || exit 1

0001_1	set -x; handlerProcessParallelism.sh "clean"
0001_2	set -x; handlerProcessParallelism.sh "add" "$TESTSCRIPT/OMAP4Playback.sh Multimedia Handsfree 0 $SAMPLESDIR/Sample-S16_LE-48000-2-Long.wav 30"
0001_3	set -x; handlerProcessParallelism.sh "add" "handlerCmd.sh run \"sleep 5; $TESTSCRIPT/OMAP4TinyConfigureOutput.sh Multimedia Headset Enable\""
0001_4	set -x; handlerProcessParallelism.sh "add" "handlerCmd.sh run \"sleep 5; $TESTSCRIPT/OMAP4TinyConfigureOutput.sh Multimedia Handsfree Disable\""
0001_5  set -x; handlerProcessParallelism.sh "execute"

0003_1	set -x; handlerProcessParallelism.sh "clean"
0003_2	set -x; handlerProcessParallelism.sh "add" "$TESTSCRIPT/OMAP4Playback.sh Multimedia Handsfree 0 $SAMPLESDIR/Sample-S16_LE-48000-2-Long.wav 30"
0003_3	set -x; handlerProcessParallelism.sh "add" "handlerCmd.sh run \"sleep 5; $TESTSCRIPT/OMAP4TinyConfigureOutput.sh Multimedia Headset Enable\""
0003_4  set -x; handlerProcessParallelism.sh "execute"

0023_2	set -x; $TESTSCRIPT/OMAP4ClearPaths.sh "Playback" && exit 0 || exit 1

