0001	echo "L_DD_AUDIO-ALSA_30506"
0002	audio-tool save $TMPBASE/audio.cfg && audio-tool reset
0003	audio-tool config cap Voice OnboardMic enable
0004	audio-tool config play Voice Handsfree enable
0005	audio-tool cap $TMPBASE/rec.wav -c 2 -r 48000 -b 16 -d 2 -t 5
0006	audio-tool play $TMPBASE/rec.wav -d 2
0007	audio-tool cap $TMPBASE/rec.wav -c 2 -r 48000 -b 32 -d 2 -t 5
0008	audio-tool play $TMPBASE/rec.wav -d 2
0009	audio-tool restore $TMPBASE/audio.cfg