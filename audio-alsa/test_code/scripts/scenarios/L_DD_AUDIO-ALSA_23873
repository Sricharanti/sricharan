0001	echo "L_DD_AUDIO-ALSA_23863"
0002	audio-tool save $TMPBASE/audio.cfg && audio-tool reset
0003	audio-tool config play Multimedia Headset enable
0004	audio-tool config play Multimedia Handsfree enable
0005	set -x; handlerProcessParallelism.sh "clean"
0006	set -x; handlerProcessParallelism.sh "add" "audio-tool tone sine 1000 16 -c 2 -r 48000 -b 16 -d 0 -t 10"
0007	set -x; handlerProcessParallelism.sh "add" "sleep 3; audio-tool config play Multimedia Headset disable"
0008	set -x; handlerProcessParallelism.sh "add" "sleep 4; omapconf show audioic gains | grep 'Left Headset Driver Gain' | grep -e '-30dB'"
0009	set -x; handlerProcessParallelism.sh "add" "sleep 4; omapconf show audioic gains | grep 'Left Headset Driver Gain' | grep -e '-30dB'"
0010	set -x; handlerProcessParallelism.sh "add" "sleep 6; audio-tool config play Multimedia Headset enable"
0011	set -x; handlerProcessParallelism.sh "add" "sleep 7; audio-tool config play Multimedia Handsfree disable"
0012	set -x; handlerProcessParallelism.sh "add" "sleep 8; omapconf show audioic gains | grep 'Left Handsfree PGA Gain' | grep -e '-52dB'"
0013	set -x; handlerProcessParallelism.sh "add" "sleep 8; omapconf show audioic gains | grep 'Right Handsfree PGA Gain' | grep -e '-52dB'"
0014	set -x; handlerProcessParallelism.sh "execute"
0015	audio-tool restore $TMPBASE/audio.cfg
