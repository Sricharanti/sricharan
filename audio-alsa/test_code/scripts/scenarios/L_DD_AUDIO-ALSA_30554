0001	echo "L_DD_AUDIO-ALSA_30554"
0002	audio-tool save $TMPBASE/audio.cfg && audio-tool reset
0003	audio-tool config cap Multimedia DMic0 enable
0004	audio-tool cap $TMPBASE/rec.wav -c 2 -r 48000 -b 32 -d 0 -t 5
0005	audio-tool config play Multimedia Headset enable
0006	audio-tool play $TMPBASE/rec.wav -d 0
0007	audio-tool restore $TMPBASE/audio.cfg
