0001	echo "L_DD_AUDIO-ALSA_30555"
0002	audio-tool save $TMPBASE/audio.cfg && audio-tool reset
0003	audio-tool config play Multimedia Headset enable
0004	audio-tool config cap Multimedia2 DMic0 enable
0005	audio-tool cap $TMPBASE/rec.wav -c 2 -r 48000 -b 16 -d 1 -t 5
0006	audio-tool play $TMPBASE/rec.wav -d 0
0007	audio-tool config cap Multimedia2 DMic1 enable
0008	audio-tool cap $TMPBASE/rec.wav -c 2 -r 48000 -b 16 -d 1 -t 5
0009	audio-tool play $TMPBASE/rec.wav -d 0
0010	audio-tool config cap Multimedia2 DMic2 enable
0011	audio-tool cap $TMPBASE/rec.wav -c 2 -r 48000 -b 16 -d 1 -t 5
0012	audio-tool play $TMPBASE/rec.wav -d 0
0013	audio-tool restore $TMPBASE/audio.cfg