0001	echo "L_DD_AUDIO-ALSA_30497"
0002	audio-tool save $TMPBASE/audio.cfg && audio-tool reset
0003	audio-tool config play Voice Handsfree enable
0004	audio-tool tone sine 1000 16 -c 2 -r 8000 -b 16 -d 2 -t 5
0005	audio-tool tone sine 1000 16 -c 2 -r 16000 -b 16 -d 2 -t 5
0006	audio-tool tone sine 1000 16 -c 2 -r 48000 -b 16 -d 2 -t 5
0007	audio-tool restore $TMPBASE/audio.cfg