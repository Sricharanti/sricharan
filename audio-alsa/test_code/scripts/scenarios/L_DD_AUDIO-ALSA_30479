0001	echo "L_DD_AUDIO-ALSA_30479"
0002	audio-tool save $TMPBASE/audio.cfg && audio-tool reset
0003	audio-tool mix 'Analog Left Capture Route' 'Headset Mic'
0004	audio-tool mix | grep 'Analog Left Capture Route' | grep 'Headset Mic'
0005	audio-tool mix 'Analog Right Capture Route' 'Headset Mic'
0006	audio-tool mix | grep 'Analog Right Capture Route' | grep 'Headset Mic'
0007	audio-tool mix 'Analog Left Capture Route' 'Off'
0008	audio-tool mix | grep 'Analog Left Capture Route' | grep 'Off'
0009	audio-tool mix 'Analog Right Capture Route' 'Off'
0010	audio-tool mix | grep 'Analog Right Capture Route' | grep 'Off'
0011	audio-tool restore $TMPBASE/audio.cfg