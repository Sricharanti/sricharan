0001	echo "L_DD_AUDIO-ALSA_30481"
0002	audio-tool save $TMPBASE/audio.cfg && audio-tool reset
0003	audio-tool mix 'Earphone Playback Switch' 1
0004	audio-tool mix | grep 'Earphone Playback Switch' | grep 'On'
0005	audio-tool mix 'Earphone Playback Switch' 0
0006	audio-tool mix | grep 'Earphone Playback Switch' | grep 'Off'
0007	audio-tool restore $TMPBASE/audio.cfg