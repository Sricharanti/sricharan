0001	echo "L_DD_AUDIO-ALSA_23869"
0002	audio-tool save $TMPBASE/audio.cfg && audio-tool reset
0003	audio-tool config cap Multimedia2 DMic0 enable
0004	audio-tool cap $TMPBASE/rec.wav -c 2 -r 48000 -b 16 -d 1 -t 18000
0005	audio-tool config play Multimedia Headset enable
0006	audio-tool play $TMPBASE/rec.wav -d 0 -t 60
0007	audio-tool restore $TMPBASE/audio.cfg
