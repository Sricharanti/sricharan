0001	echo "L_DD_AUDIO-ALSA_30563"
0002	audio-tool save $TMPBASE/audio.cfg && audio-tool reset
0003	audio-tool config play Multimedia Headset enable
0004	audio-tool tone sine 401 16 -c 2 -r 44100 -b 16 -d 0 -t 5
0005	audio-tool tone sine 997 16 -c 2 -r 44100 -b 16 -d 0 -t 5
0006	audio-tool tone sine 1999 16 -c 2 -r 44100 -b 16 -d 0 -t 5
0007	audio-tool restore $TMPBASE/audio.cfg
