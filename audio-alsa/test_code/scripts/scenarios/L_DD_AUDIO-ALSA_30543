0001	echo "L_DD_AUDIO-ALSA_30543"
0002	audio-tool save $TMPBASE/audio.cfg && audio-tool reset
0003	audio-tool config play Multimedia Headset enable
0004	audio-tool mix 'PLL Selection' 'High-Performance'
0005	audio-tool tone sine 1000 20 -c 2 -r 48000 -b 16 -d 0 -t 3
0006	audio-tool mix 'PLL Selection' 'Low-Power'
0007	audio-tool tone sine 1000 20 -c 2 -r 48000 -b 16 -d 0 -t 3
0008	audio-tool restore $TMPBASE/audio.cfg