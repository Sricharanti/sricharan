0001	echo "L_DD_AUDIO-ALSA_30566"
0002	audio-tool save $TMPBASE/audio.cfg && audio-tool reset
0003	audio-tool config cap Multimedia HeadsetMic enable
0004	set -x; handlerProcessParallelism.sh "clean"
0005	set -x; handlerProcessParallelism.sh "add" "audio-tool cap $TMPBASE/rec.wav -c 2 -r 48000 -b 32 -d 0 -t 5"
0006	set -x; handlerProcessParallelism.sh "add" "sleep 1; cat /sys/kernel/debug/omap-abe/opp_level | grep '100'"
0007	set -x; handlerProcessParallelism.sh "execute"
0008	audio-tool config play Multimedia Headset enable
0009	audio-tool play $TMPBASE/rec.wav -d 0
0010	audio-tool restore $TMPBASE/audio.cfg
