# Begin L_DD_AUDIO-ALSA_0103

0000_1	set -x; $TESTSCRIPT/CheckPreconditions.sh $SAMPLESDIR
0000_2	set -x; $TESTSCRIPT/OMAP4ClearPaths.sh "Playback" && exit 0 || exit 1

# MM_DL/MM_LP Ports
0001a_1	set -x; $TESTSCRIPT/OMAP4AudioPlayback.sh "Multimedia" "Headset" "hw:0,0" "S32_LE" "48000" "2" && exit 0 || exit 1
0001a_2	set -x; $TESTSCRIPT/OMAP4AudioPlayback.sh "MultimediaLP" "Headset" "hw:0,6" "S32_LE" "44100" "2" && exit 0 || exit 1
0001b_1	set -x; $TESTSCRIPT/OMAP4AudioPlayback.sh "MultimediaLP" "Headset" "hw:0,6" "S16_LE" "48000" "2" && exit 0 || exit 1
0001b_2	set -x; $TESTSCRIPT/OMAP4AudioPlayback.sh "MultimediaLP" "Headset" "hw:0,6" "S32_LE" "48000" "2" && exit 0 || exit 1
0001c_1	set -x; $TESTSCRIPT/OMAP4AudioPlayback.sh "Multimedia" "Headset" "hw:0,0" "S32_LE" "48000" "1" && exit 0 || exit 1
0001c_2	set -x; $TESTSCRIPT/OMAP4AudioPlayback.sh "Multimedia" "Headset" "hw:0,0" "S32_LE" "48000" "2" && exit 0 || exit 1
0001d	set -x; $TESTSCRIPT/OMAP4AudioPlayback.sh "Multimedia" "Handsfree" "hw:0,0" "S32_LE" "48000" "2" && exit 0 || exit 1
0001e	set -x; $TESTSCRIPT/OMAP4AudioPlayback.sh "Multimedia" "Earpiece" "hw:0,0" "S32_LE" "48000" "2" && exit 0 || exit 1

# TONES_DL Port
0002a_1	set -x; $TESTSCRIPT/OMAP4AudioPlayback.sh "Tones" "Headset" "hw:0,3" "S32_LE" "48000" "2" && exit 0 || exit 1
0002a_2	set -x; $TESTSCRIPT/OMAP4AudioPlayback.sh "Tones" "Headset" "plughw:0,3" "S32_LE" "44100" "2" && exit 0 || exit 1
0002b_1	set -x; $TESTSCRIPT/OMAP4AudioPlayback.sh "Tones" "Headset" "plughw:0,3" "S16_LE" "48000" "2" && exit 0 || exit 1
0002b_2	set -x; $TESTSCRIPT/OMAP4AudioPlayback.sh "Tones" "Headset" "hw:0,3" "S32_LE" "48000" "2" && exit 0 || exit 1
0002c_1	set -x; $TESTSCRIPT/OMAP4AudioPlayback.sh "Tones" "Headset" "hw:0,3" "S32_LE" "48000" "1" && exit 0 || exit 1
0002c_2	set -x; $TESTSCRIPT/OMAP4AudioPlayback.sh "Tones" "Headset" "hw:0,3" "S32_LE" "48000" "2" && exit 0 || exit 1
0002d	set -x; $TESTSCRIPT/OMAP4AudioPlayback.sh "Tones" "Handsfree" "hw:0,3" "S32_LE" "48000" "2" && exit 0 || exit 1
0002e	set -x; $TESTSCRIPT/OMAP4AudioPlayback.sh "Tones" "Earpiece" "hw:0,3" "S32_LE" "48000" "2" && exit 0 || exit 1

# VX_DL Port
0003a_1	set -x; $TESTSCRIPT/OMAP4AudioPlayback.sh "Voice" "Headset" "hw:0,2" "S32_LE" "8000" "2" && exit 0 || exit 1
0003a_2	set -x; $TESTSCRIPT/OMAP4AudioPlayback.sh "Voice" "Headset" "plughw:0,2" "S32_LE" "16000" "2" && exit 0 || exit 1
0003b_1	set -x; $TESTSCRIPT/OMAP4AudioPlayback.sh "Voice" "Headset" "plughw:0,2" "S16_LE" "16000" "2" && exit 0 || exit 1
0003b_2	set -x; $TESTSCRIPT/OMAP4AudioPlayback.sh "Voice" "Headset" "hw:0,2" "S32_LE" "16000" "2" && exit 0 || exit 1
0003c_1	set -x; $TESTSCRIPT/OMAP4AudioPlayback.sh "Voice" "Headset" "hw:0,2" "S32_LE" "16000" "1" && exit 0 || exit 1
0003c_2	set -x; $TESTSCRIPT/OMAP4AudioPlayback.sh "Voice" "Headset" "hw:0,2" "S32_LE" "16000" "2" && exit 0 || exit 1
0003d	set -x; $TESTSCRIPT/OMAP4AudioPlayback.sh "Voice" "Handsfree" "hw:0,2" "S32_LE" "16000" "2" && exit 0 || exit 1
0003e	set -x; $TESTSCRIPT/OMAP4AudioPlayback.sh "Voice" "Earpiece" "hw:0,2" "S32_LE" "16000" "2" && exit 0 || exit 1

# Buffer time
0005_1	set -x; $TESTSCRIPT/OMAP4AudioPlayback.sh "Multimedia" "Headset" "hw:0,0" "S32_LE" "48000" "2" "5000" && exit 0 || exit 1
0005_2	set -x; $TESTSCRIPT/OMAP4AudioPlayback.sh "Multimedia" "Headset" "hw:0,0" "S32_LE" "48000" "2" "10000" && exit 0 || exit 1
0005_3	set -x; $TESTSCRIPT/OMAP4AudioPlayback.sh "Multimedia" "Headset" "hw:0,0" "S32_LE" "48000" "2" "20000" && exit 0 || exit 1

# Volume
0006_1	set -x; handlerProcessParallelism.sh "clean"
0006_2	set -x; handlerProcessParallelism.sh "add" "$TESTSCRIPT/OMAP4Playback.sh Multimedia Headset plughw:0,0 $SAMPLESDIR/Sample-S16_LE-48000-2-Long.wav"
0006_3	set -x; handlerProcessParallelism.sh "add" "$TESTSCRIPT/ChangeGain.sh \"DL1 Media Playback Volume\" Increase 80 120 2 2"
0006_4	set -x; handlerProcessParallelism.sh "execute"

# End L_DD_AUDIO-ALSA_0103
