0001	echo "L_DD_AUDIO-ALSA_30551"
0002	audio-tool save $TMPBASE/audio.cfg && audio-tool reset
0003	audio-tool mix 'Handsfree Left Playback' 'Line-In amp'
0004	audio-tool mix | grep 'Handsfree Left Playback' | grep 'Line-In amp'
0005	audio-tool mix 'Handsfree Right Playback' 'Line-In amp'
0006	audio-tool mix | grep 'Handsfree Right Playback' | grep 'Line-In amp'
0007	audio-tool mix 'Aux FM Volume' 5
0008	audio-tool mix | grep 'Aux FM Volume' | grep '5'
0009	audio-tool restore $TMPBASE/audio.cfg