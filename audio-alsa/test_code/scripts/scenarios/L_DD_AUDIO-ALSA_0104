# Begin L_DD_AUDIO-ALSA_0104

0000	set -x; $TESTSCRIPT/OMAP4ClearPaths.sh "Playback" && $TESTSCRIPT/OMAP4ClearPaths.sh "Capture" && exit 0 || exit 1

# MM_UL Port
0001a_1	set -x; $TESTSCRIPT/OMAP4AudioCapture.sh "Multimedia" "HeadsetMic" "plughw:0,0" "S32_LE" "44100" "2" && exit 0 || exit 1
0001a_2	set -x; $TESTSCRIPT/OMAP4AudioCapture.sh "Multimedia" "HeadsetMic" "hw:0,0" "S32_LE" "48000" "2" && exit 0 || exit 1
0001b_1	set -x; $TESTSCRIPT/OMAP4AudioCapture.sh "Multimedia" "HeadsetMic" "plughw:0,0" "S16_LE" "48000" "2" && exit 0 || exit 1
0001b_2	set -x; $TESTSCRIPT/OMAP4AudioCapture.sh "Multimedia" "HeadsetMic" "hw:0,0" "S32_LE" "48000" "2" && exit 0 || exit 1
0001c_1	set -x; $TESTSCRIPT/OMAP4AudioCapture.sh "Multimedia" "HeadsetMic" "plughw:0,0" "S32_LE" "48000" "1" && exit 0 || exit 1
0001c_2	set -x; $TESTSCRIPT/OMAP4AudioCapture.sh "Multimedia" "HeadsetMic" "hw:0,0" "S32_LE" "48000" "2" && exit 0 || exit 1
0001d	set -x; $TESTSCRIPT/OMAP4AudioCapture.sh "Multimedia" "OnboardMic" "hw:0,0" "S32_LE" "48000" "2" && exit 0 || exit 1

# VX_UL Port
0002a_1	set -x; $TESTSCRIPT/OMAP4AudioCapture.sh "Voice" "HeadsetMic" "hw:0,2" "S32_LE" "8000" "2" && exit 0 || exit 1
0002a_2	set -x; $TESTSCRIPT/OMAP4AudioCapture.sh "Voice" "HeadsetMic" "hw:0,2" "S32_LE" "16000" "2" && exit 0 || exit 1
0002b_1	set -x; $TESTSCRIPT/OMAP4AudioCapture.sh "Voice" "HeadsetMic" "plughw:0,2" "S16_LE" "16000" "2" && exit 0 || exit 1
0002b_2	set -x; $TESTSCRIPT/OMAP4AudioCapture.sh "Voice" "HeadsetMic" "hw:0,2" "S32_LE" "16000" "2" && exit 0 || exit 1
0002c_1	set -x; $TESTSCRIPT/OMAP4AudioCapture.sh "Voice" "HeadsetMic" "hw:0,2" "S32_LE" "16000" "1" && exit 0 || exit 1
0002c_2	set -x; $TESTSCRIPT/OMAP4AudioCapture.sh "Voice" "HeadsetMic" "hw:0,2" "S32_LE" "16000" "2" && exit 0 || exit 1
0002d	set -x; $TESTSCRIPT/OMAP4AudioCapture.sh "Voice" "OnboardMic" "hw:0,2" "S32_LE" "48000" "2" && exit 0 || exit 1

# MM_UL2 Port
0003a_1	set -x; $TESTSCRIPT/OMAP4AudioCapture.sh "Multimedia2" "HeadsetMic" "plughw:0,1" "S32_LE" "44100" "2" && exit 0 || exit 1
0003a_2	set -x; $TESTSCRIPT/OMAP4AudioCapture.sh "Multimedia2" "HeadsetMic" "hw:0,1" "S32_LE" "48000" "2" && exit 0 || exit 1
0003b_1	set -x; $TESTSCRIPT/OMAP4AudioCapture.sh "Multimedia2" "HeadsetMic" "plughw:0,1" "S16_LE" "48000" "2" && exit 0 || exit 1
0003b_2	set -x; $TESTSCRIPT/OMAP4AudioCapture.sh "Multimedia2" "HeadsetMic" "hw:0,1" "S32_LE" "48000" "2" && exit 0 || exit 1
0003c_1	set -x; $TESTSCRIPT/OMAP4AudioCapture.sh "Multimedia2" "HeadsetMic" "hw:0,1" "S32_LE" "48000" "1" && exit 0 || exit 1
0003c_2	set -x; $TESTSCRIPT/OMAP4AudioCapture.sh "Multimedia2" "HeadsetMic" "hw:0,1" "S32_LE" "48000" "2" && exit 0 || exit 1
0002d	set -x; $TESTSCRIPT/OMAP4AudioCapture.sh "Multimedia2" "OnboardMic" "hw:0,1" "S32_LE" "48000" "2" && exit 0 || exit 1

# Buffer time
0004_1	set -x; $TESTSCRIPT/OMAP4AudioCapture.sh "Multimedia" "HeadsetMic" "hw:0,0" "S32_LE" "48000" "2" "5000" && exit 0 || exit 1
0004_2	set -x; $TESTSCRIPT/OMAP4AudioCapture.sh "Multimedia" "HeadsetMic" "hw:0,0" "S32_LE" "48000" "2" "10000" && exit 0 || exit 1
0004_3	set -x; $TESTSCRIPT/OMAP4AudioCapture.sh "Multimedia" "HeadsetMic" "hw:0,0" "S32_LE" "48000" "2" "20000" && exit 0 || exit 1

# Volume
0005_1	set -x; handlerProcessParallelism.sh "clean"
0005_2	set -x; handlerProcessParallelism.sh "add" "$TESTSCRIPT/OMAP4Capture.sh Multimedia OnboardMic plughw:0,0 $TMPBASE/record.wav 30"
0005_3	set -x; handlerProcessParallelism.sh "add" "$TESTSCRIPT/ChangeGain.sh \"AMIC UL Volume\" Increase 80 120 2 2"
0005_4	set -x; handlerProcessParallelism.sh "execute"

