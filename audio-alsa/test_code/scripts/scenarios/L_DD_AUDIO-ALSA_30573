0001	echo "L_DD_AUDIO-ALSA_30573"
0002	audio-tool save $TMPBASE/audio.cfg && audio-tool reset
0003	audio-tool config play Multimedia Headset enable
0004	handlerCmd.sh iterate 'audio-tool tone sine 1000 16 -c 2 -r 44100 -b 16 -d 0 -t 2' 1000 1
0005	audio-tool restore $TMPBASE/audio.cfg