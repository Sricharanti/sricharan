0001	echo "L_DD_AUDIO-ALSA_30560"
0002	audio-tool save $TMPBASE/audio.cfg && audio-tool reset
0003	audio-tool config cap Multimedia HeadsetMic enable
0004	audio-tool cap $TMPBASE/rec.wav -c 9 -r 48000 -b 32 -d 0 -t 5 || exit 0
0005	audio-tool config play Multimedia Headset enable
0006	audio-tool tone sine 1000 16 -c 4 -r 48000 -b 16 -d 0 -t 5 || exit 0
0007	audio-tool restore $TMPBASE/audio.cfg