0001	echo "L_DD_AUDIO-ALSA_30531"
0002	audio-tool save $TMPBASE/audio.cfg && audio-tool reset
0003	audio-tool config play Multimedia Headset enable
0004	audio-tool config play Voice Headset enable
0005	audio-tool config play Tones Headset enable
0005	set -x; handlerProcessParallelism.sh "clean"
0006	set -x; handlerProcessParallelism.sh "add" "audio-tool tone sine 100 16 -c 2 -r 44100 -b 16 -d 0 -t 6"
0007	set -x; handlerProcessParallelism.sh "add" "sleep 2; audio-tool tone sine 500 16 -c 2 -r 8000 -b 16 -d 2 -t 6"
0008	set -x; handlerProcessParallelism.sh "add" "sleep 4; audio-tool tone sine 1000 16 -c 2 -r 48000 -b 16 -d 3 -t 6"
0009	set -x; handlerProcessParallelism.sh "execute"
0010	audio-tool restore $TMPBASE/audio.cfg