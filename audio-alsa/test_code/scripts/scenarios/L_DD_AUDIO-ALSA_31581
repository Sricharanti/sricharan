0001	echo "L_DD_AUDIO-ALSA_31581"
0002	audio-tool save $TMPBASE/audio.cfg && audio-tool
0003	audio-tool config play Multimedia Headset enable
0004	audio-tool config cap Multimedia2 Echo enable
0005	set -x; handlerProcessParallelism.sh "clean"
0006	set -x; handlerProcessParallelism.sh "add" "audio-tool cap $TMPBASE/rec.wav -c 2 -r 48000 -b 16 -d 1 -t 7"
0007	set -x; handlerProcessParallelism.sh "add" "sleep 2; audio-tool tone sine 1000 16 -c 2 -r 48000 -b 16 -d 0 -t 3"
0008	set -x; handlerProcessParallelism.sh "execute"
0009	audio-tool reset
0010	audio-tool config play Multimedia Headset enable
0011	audio-tool play $TMPBASE/rec.wav -d 0
0012	audio-tool restore $TMPBASE/audio.cfg