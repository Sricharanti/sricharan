0004 set -x; rot.sh "4" && exit 0 || exit 1
0005 set -x; rot.sh "5" && exit 0 || exit 1
0006 set -x; rot.sh "6" && exit 0 || exit 1
0007 set -x; rot.sh "7" && exit 0 || exit 1
0008 set -x; rot.sh "8" && exit 0 || exit 1

bar   echo "L_DD_FB_1002"
