# Begin L_DD_ETHERNET_0002_0001

01  set -x; ifconfig | grep eth0 && ifconfig | grep addr: | sed -e 's@inet addr:@@' | sed q | awk '{print $1}' > $ETHERNET_DIR_TMP/ipaddr && exit 0 || exit 1;

02  set -x; ping -c 1  `cat $ETHERNET_DIR_TMP/ipaddr` && exit 0 || exit 1
03  set -x; ping -c 5  `cat $ETHERNET_DIR_TMP/ipaddr` && exit 0 || exit 1
04  set -x; ping -c 10 `cat $ETHERNET_DIR_TMP/ipaddr` && exit 0 || exit 1
05  set -x; ping -c 25 `cat $ETHERNET_DIR_TMP/ipaddr` && exit 0 || exit 1

# End L_DD_ETHERNET_0002_0001
