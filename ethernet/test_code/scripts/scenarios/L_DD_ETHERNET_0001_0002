# Begin L_DD_ETHERNET_0001_0002

COMMENT comment.sh "To test that the resource IRQ is allocated to the driver properly"

A cat /proc/interrupts | grep eth0 | sed -e 's@:@@' | sed q | awk '{print $1}' > /tmp/IRQ1 && exit 0 || exit 1;
B ifconfig | grep Interrupt: | sed -e 's@Interrupt:@@' | sed q | awk '{print $1}' > /tmp/IRQ2 && exit 0 || exit 1;
C cmp /tmp/IRQ1 /tmp/IRQ2 && exit 0 || exit 1;

# End L_DD_ETHERNET_0001_0002
