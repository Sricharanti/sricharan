# Begin L_DD_ETHERNET_0001_0001

01  set -x; ifconfig | grep eth0 && ifconfig | grep addr: | sed -e 's@inet addr:@@' | sed q | awk '{print $1}' > $ETHERNET_DIR_TMP/ipaddr && exit 0 || exit 1;
02  set -x; ifconfig | grep HWaddr | awk '{print $5}' > $ETHERNET_DIR_TMP/ethaddr && exit 0 || exit 1;

# End L_DD_ETHERNET_0001_0001
