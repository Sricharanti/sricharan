# Valid values
01  set -x; handlerIfconfig.sh "set" "mtu" 500  && exit 0 || exit 1
02  set -x; handlerIfconfig.sh "set" "mtu" 1000 && exit 0 || exit 1
03  set -x; handlerIfconfig.sh "set" "mtu" 1500 && exit 0 || exit 1

# Invalid values
04  set -x; handlerIfconfig.sh "set" "mtu" 1501 && exit 1 || exit 0
05  set -x; handlerIfconfig.sh "set" "mtu" 2000 && exit 1 || exit 0
06  set -x; handlerIfconfig.sh "set" "mtu" 2500 && exit 1 || exit 0

# Range of valid values
07  set -x; for i in `seq 500 1500`; do handlerIfconfig.sh "set" "mtu" $i; done && exit 0 || exit 1

# Default Value
08  set -x; handlerIfconfig.sh "set" "mtu" 1500 && exit 0 || exit 1

# End L_DD_ETHERNET_0001_0004