# Begin L_DD_ETHERNET_0006_0001

# Checking the current setup
01  set -x; echo "NOTE: In order to run this scenario you need to have a ftp server in your remote machine.";
02  set -x; handlerFtp.sh "check"

# Validating the scenario
03  set -x; handlerCmd.sh "date > $TMPBASE/test_file1"
04  set -x; handlerFtp.sh "put" "-u $USER -p $PASSWD $IPADDR test_file $TMPBASE/test_file1"
04  set -x; handlerFtp.sh "get" "-u $USER -p $PASSWD $IPADDR $TMPBASE/test_file2 test_file"
05  set -x; handlerCmd.sh "cmp $TMPBASE/test_file1 $TMPBASE/test_file2"

# End L_DD_ETHERNET_0006_0001
