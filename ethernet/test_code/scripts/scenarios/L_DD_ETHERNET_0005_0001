# Begin L_DD_ETHERNET_0005_0001

01  set -x; ifconfig | grep eth0 && ifconfig | grep addr: | sed -e 's@inet addr:@@' | sed q | awk '{print $1}' > $ETHERNET_DIR_TMP/ipaddr && exit 0 || exit 1;
02  set -x; test -d /sys/power/sr_vdd1_autocomp && test -d /sys/power/sr_vdd2_autocomp && exit 0 || exit 1
03  set -x; ($ETHERNET_ROOT/../../utils/scripts/dvfs.opp.sh &) && ping -c 50 -s $ETHERNET_PACKET_SIZE `cat $ETHERNET_DIR_TMP/ipaddr` && exit 0 || exit 1

# End L_DD_ETHERNET_0005_0001
