# Begin L_DD_ETHERNET_0015_0004

0002 set -x; handlerCpuFreqScalFrequencies.sh run all "sleep 20" & timeout=0; iterations=10 ; while [  $timeout -lt $iterations ]; do handlerIfconfig.sh "get" "ipaddr"; handlerPing.sh "-c 5 `cat $ETHERNET_EXTERNAL_HOST_IPADDR`"; timeout=$((timeout=$timeout+1)); done

# End L_DD_ETHERNET_0015_0004
