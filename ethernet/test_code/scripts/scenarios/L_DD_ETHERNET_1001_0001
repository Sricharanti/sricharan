# Begin L_DD_ETHERNET_1001_0001

01 ping -c 1  `cat /tmp/ipaddr` && exit 0 || exit 1
02 ping -c 5  `cat /tmp/ipaddr` && exit 0 || exit 1
03 ping -c 10 `cat /tmp/ipaddr` && exit 0 || exit 1
04 ping -c 25 `cat /tmp/ipaddr` && exit 0 || exit 1

# End L_DD_ETHERNET_1001_0001
