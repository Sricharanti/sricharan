foo 	echo L_DD_USBHost_0002_core

1	echo -e "\n\n\t Please connect USB "$DEVICE_NAME" device to the USB port.  \n\n"  &&  sleep $DELAY3  &&  exit 0 || exit 1
#  && ${KEY_PATH}/waitkey "Press a key after the device is connected"  && exit 0 || exit 1

2	echo -e "\n\n\t Checking if ${DEVICE_NAME} is connected. \n\n" &&  $TESTSCRIPT/enum.sh connectDevice  &&  exit 0 || exit 1

3	echo -e "\n\n\t Checking ${DEVICE_NAME} speed. \n\n"   &&  $TESTSCRIPT/enum.sh checkinfoDevice  &&  echo -e "\n\n\t Device info is present. \n\n"  &&  exit 0 || exit 1

4	echo -e "\n\n\t Checking ${DEVICE_NAME} speed. \n\n"  &&  $TESTSCRIPT/enum.sh checkspeedDevice  && echo -e "\n\n\t Speed info is correct. \n\n"  &&  exit 0 || exit 1

5	if [ $ENUM_INFO != "hub" ]; then echo -e "\n\n\t Disconnect USB ${DEVICE_NAME} from the USB port.  \n\n" && sleep $DELAY3  &&  exit 0 || exit 1; fi

bar 	echo L_DD_USBHost_0002_core
