foo 	echo L_DD_USBHost_0003_1

0	insmod $MODULE_PATH/g_zero.ko  &&  echo -e "\n\n\t Testing Chapter 9, Test Control. \n\n" &&  sleep $DELAY1  &&  echo "0" > $LOGBASE/log.panresult; exit 0 || echo -e "\n\n\t ERROR1 - No module found. \n\n"; echo "1" > $LOGBASE/log.panresult; exit 1

1	if [ `cat $LOGBASE/log.panresult` = 0 ]; then export MODE="Device"; export ACTION="io"; export COMMAND="in out"; export MESSAGE="Testing In Out Transfers"; ${TESTROOT}/test_runner.sh -p L_DD_USBHost_0003_core  && exit 0 || exit 1; else echo -e "\n\n\t ERROR1 - Could not run this test because the module has not been inserted. \n\n"; exit 1; fi

2 	rm -rf $LOGBASE/log.panresult; rmmod g_zero.ko  &&  exit 0 || exit 1

bar 	echo L_DD_USBHost_0003_1
