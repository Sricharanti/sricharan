##################################################################################
# Scenario: L_DD_USB_HOST_0001_0005
# Testing : Test if the Mentor_Host and EHCI_Host can use USB Mass Storage Devices
##################################################################################

# Begin L_DD_USB_HOST_0001_0005
01  set -x; handlerUsbHostSetup.sh  "create"  "mentor"
02  set -x; handlerUsbHostSetup.sh  "create"  "ehci"
03  set -x; handlerUsbHost.sh  "add"  "mass_storage" "sda1" "/mnt/mentor/"
04  set -x; handlerUsbHost.sh  "add"  "mass_storage" "sdb1" "/mnt/ehci/"
05  set -x; df -h
06 set -x; handlerUsbHost.sh  "remove"  "mass_storage" "sdb1" "/mnt/ehci/"
07 set -x; handlerUsbHost.sh  "remove"  "mass_storage" "sda1" "/mnt/mentor/"
08  set -x; handlerUsbHostSetup.sh  "remove"  "ehci"
09  set -x; handlerUsbHostSetup.sh  "remove"  "mentor"
# End L_DD_USB_HOST_0001_0005
