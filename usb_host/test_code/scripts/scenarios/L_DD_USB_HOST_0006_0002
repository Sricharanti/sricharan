# Begin L_DD_USB_HOST_0006_0002

01  set -x; echo "Selective Port suspend/resume test"
02  set -x; insmod $UTILSMODULES/ohci-hcd.ko  &&  exit 0 || exit 1
03  set -x; insmod $UTILSMODULES/ehci-hcd.ko  &&  exit 0 || exit 1
04  set -x; mount -t usbfs none /proc/bus/usb &&  exit 0 || exit 1
05  set -x; touch otg.txt &&  exit 0 || exit 1
06  set -x; chmod 777 otg.txt &&  exit 0 || exit 1
07  set -x; echo "echo "otg" > /sys/devices/platform/musb_hdrc/mode" > otg.txt &&  exit 0 || exit 1
08  set -x; sh otg.txt &&  exit 0 || exit 1
09  set -x; cat /proc/bus/usb/devices | grep 'stor' && exit 0 || exit 1
10  set -x; chmod 777 -R /sys/bus/usb/drivers/usb-storage/unbind && exit 0 || exit 1
11  set -x; chmod 777 -R /sys/bus/usb/drivers/usb-storage/bind && exit 0 || exit 1
12  set -x; sh $USBHOST_DIR_HELPER/usbSuspendResume.sh && exit 0 || exit 1
13  set -x; umount /proc/bus/usb &&  exit 0 || exit 1
14  set -x; rmmod ehci-hcd && exit 0 || exit 1
15  set -x; rmmod ohci-hcd && exit 0 || exit 1

# End L_DD_USB_HOST_0006_0002
