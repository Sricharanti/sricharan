##################################################################################
# Scenario: L_DD_USB_HOST_0001_0006
# Testing : Test if the Mentor_Host and OHCI_Host can use USB Mass Storage Devices
##################################################################################

# Begin L_DD_USB_HOST_0001_0006
01  set -x; handlerUsbHostSetup.sh  "create"  "mentor"
02  set -x; handlerUsbHostSetup.sh  "create"  "ohci"
03  set -x; handlerUsbHost.sh  "add"  "mass_storage" "sda1" "/mnt/mentor/"
04  set -x; handlerUsbHost.sh  "add"  "mass_storage" "sdb1" "/mnt/ohci/"
05  set -x; df -h
06 set -x; handlerUsbHost.sh  "remove"  "mass_storage" "sdb1" "/mnt/ohci/"
07 set -x; handlerUsbHost.sh  "remove"  "mass_storage" "sda1" "/mnt/mentor/"
08  set -x; handlerUsbHostSetup.sh  "remove"  "ohci"
09  set -x; handlerUsbHostSetup.sh  "remove"  "mentor"
# End L_DD_USB_HOST_0001_0006
