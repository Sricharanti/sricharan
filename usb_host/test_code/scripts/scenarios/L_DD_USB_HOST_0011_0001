###############################################################################
# Scenario    : L_DD_USB_HOST_0011_0001
# Description : USB Host Mentor | Mass Storage | Process Parallelism
###############################################################################

# Begin L_DD_USB_HOST_0011_0001

01	set -x; handlerUsbHostSetup.sh  "create"  "mentor"
02	set -x; handlerUsbHost.sh  "add"  "mass_storage" "sda1" "/mnt/mentor/"

03	set -x; mount && df -h && sleep 5; exit 0

04	set -x; $UTILS_DIR_HANDLERS/handlerProcessParallelism.sh "clean"
05	set -x; $UTILS_DIR_HANDLERS/handlerProcessParallelism.sh "add" "dd if=/dev/urandom of=/mnt/mentor/sda1/file.01 bs=1M count=50"
06	set -x; $UTILS_DIR_HANDLERS/handlerProcessParallelism.sh "add" "dd if=/dev/urandom of=/mnt/mentor/sda1/file.02 bs=1M count=50"
07	set -x; $UTILS_DIR_HANDLERS/handlerProcessParallelism.sh "add" "dd if=/dev/urandom of=/mnt/mentor/sda1/file.03 bs=1M count=50"
08	set -x; $UTILS_DIR_HANDLERS/handlerProcessParallelism.sh "add" "dd if=/dev/urandom of=/mnt/mentor/sda1/file.04 bs=1M count=50"
09	set -x; $UTILS_DIR_HANDLERS/handlerProcessParallelism.sh "add" "dd if=/dev/urandom of=/mnt/mentor/sda1/file.05 bs=1M count=50"
10	set -x; $UTILS_DIR_HANDLERS/handlerProcessParallelism.sh "execute"

11	set -x; $UTILS_DIR_HANDLERS/handlerProcessParallelism.sh "clean"
12	set -x; $UTILS_DIR_HANDLERS/handlerProcessParallelism.sh "add" "dd if=/mnt/mentor/sda1/file.01 of=/mnt/mentor/sda1/file.06 bs=1M count=50"
13	set -x; $UTILS_DIR_HANDLERS/handlerProcessParallelism.sh "add" "dd if=/mnt/mentor/sda1/file.02 of=/mnt/mentor/sda1/file.07 bs=1M count=50"
14	set -x; $UTILS_DIR_HANDLERS/handlerProcessParallelism.sh "add" "dd if=/mnt/mentor/sda1/file.03 of=/mnt/mentor/sda1/file.08 bs=1M count=50"
15	set -x; $UTILS_DIR_HANDLERS/handlerProcessParallelism.sh "add" "dd if=/mnt/mentor/sda1/file.04 of=/mnt/mentor/sda1/file.09 bs=1M count=50"
16	set -x; $UTILS_DIR_HANDLERS/handlerProcessParallelism.sh "add" "dd if=/mnt/mentor/sda1/file.05 of=/mnt/mentor/sda1/file.10 bs=1M count=50"
17	set -x; $UTILS_DIR_HANDLERS/handlerProcessParallelism.sh "execute"

18	set -x; mount && df -h && sleep 5; exit 0

19	set -x; handlerUsbHost.sh  "remove"  "mass_storage" "sda1" "/mnt/mentor/"
20	set -x; handlerUsbHostSetup.sh  "remove"  "mentor"

# End L_DD_USB_HOST_0011_0001
