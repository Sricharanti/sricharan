# Description: Test creating and deleting partitions on the MMC card
###################################################################################################################

# Begin L_DD_MMC_0002_0001

01 set -x; mkdir $MOUNT_POINT1; mkdir $MOUNT_POINT3; exit 0
02 set -x; echo -e "n\n p\n 1\n $START_SECTOR_DEV1\n $END_SECTOR_DEV1\n w\n" | fdisk $ROOT_ENTRY_DEV1 && exit 0 || exit 1
03 set -x; cat /proc/partitions | grep $PARTITION1_NAME_DEV1 && exit 0 || exit 1
04 set -x; echo -e "d\n 1\n w\n" | fdisk $ROOT_ENTRY_DEV1 && exit 0 || exit 1
05 set -x; cat /proc/partitions | grep $PARTITION1_NAME_DEV1 && exit 1 || exit 0

# End L_DD_MMC_0002_0001
