###############################################################################
# Scenario: L_DD_MMC_SD_0006_0001
# Author  : Sukumar Ghorai
# Date    : 01 Sept 2010
###############################################################################

# Begin L_DD_MMC_SD_0006_0001

01  set -x; handlerMmcsdBlock.sh "create" "1" "dos"

02  set -x; handlerTmpfs.sh "create" "250" $MMCSD_TMPFS_MOUNTPOINT
03  set -x; handlerCmd.sh "run" "dd if=/dev/urandom of=$MMCSD_TMPFS_MOUNTPOINT/$MMCSD_FILE_SIZE_BIG bs=1M count=200"
04  set -x; handlerCmd.sh "run" "cp $MMCSD_TMPFS_MOUNTPOINT/$MMCSD_FILE_SIZE_BIG $MMCSD_MOUNTPOINT_1 && sync"
06  set -x; handlerCmd.sh "run" "cmp $MMCSD_MOUNTPOINT_1/$MMCSD_FILE_SIZE_BIG $MMCSD_MOUNTPOINT_2/$MMCSD_FILE_SIZE_BIG"

08  set -x; echo "Remove and Insert the card..."
09 set -x; sleep 10

10  set -x; ls $SYS_MMC_HOST/mmc$SLOT/mmc* && exit 0 || exit 1

11  set -x; handlerCmd.sh "run" "cmp $MMCSD_MOUNTPOINT_1/$MMCSD_FILE_SIZE_BIG $MMCSD_MOUNTPOINT_2/$MMCSD_FILE_SIZE_BIG"

12  set -x; handlerTmpfs.sh "remove" $MMCSD_TMPFS_MOUNTPOINT
13  set -x; handlerMmcsdBlock.sh "remove" "1"

# End L_DD_MMC_SD_0006_0001

