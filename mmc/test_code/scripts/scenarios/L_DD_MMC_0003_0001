# Begin L_DD_MMC_0003_0001

01 set -x; mkdir $MOUNT_POINT1; mkdir $MOUNT_POINT3; exit 0
02 set -x; echo -e "n\n p\n 1\n $START_SECTOR_DEV1\n $END_SECTOR_DEV1\n w\n" | fdisk $ROOT_ENTRY_DEV1 && exit 0 || exit 1

03 set -x; $TESTBIN/mkdosfs $PARTITION1_ENTRY_DEV1 && exit 0 || exit 1

04 set -x; mount -t vfat $PARTITION1_ENTRY_DEV1 $MOUNT_POINT1 && exit 0 || exit 1
05 set -x; mount | grep $PARTITION1_ENTRY_DEV1 | grep "vfat" && exit 0 || exit 1
06 set -x; umount $MOUNT_POINT1 && exit 0 || exit 1

07 set -x; mount -t vfat $PARTITION1_ENTRY_DEV1 $MOUNT_POINT1 && exit 0 || exit 1
08 set -x; mount | grep $PARTITION1_ENTRY_DEV1 | grep "vfat" && exit 0 || exit 1
09 set -x; umount $MOUNT_POINT1 && exit 0 || exit 1

10 set -x; mount -t vfat $PARTITION1_ENTRY_DEV1 $MOUNT_POINT1 && exit 0 || exit 1
11 set -x; mount | grep $PARTITION1_ENTRY_DEV1 | grep "vfat" && exit 0 || exit 1
12 set -x; umount $MOUNT_POINT1 && exit 0 || exit 1

13 set -x; echo -e "d\n w\n" | fdisk $ROOT_ENTRY_DEV1 && exit 0 || exit 1
14 set -x; cat /proc/partitions | grep $PARTITION1_NAME_DEV1 && exit 1 || exit 0

# End L_DD_MMC_0003_0001
