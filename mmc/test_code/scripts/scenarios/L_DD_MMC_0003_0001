# Scenario: L_DD_MMC_0003_0001
# Author  : Misael Lopez Cruz
# Date    : September 20, 2006
###############################################################################

# Begin L_DD_MMC_0003_0001

# Clean up
01  set -x; rm -rf $MMC_MOUNT_POINT_1 $MMC_MOUNT_POINT_2; exit 0
02  set -x; mkdir $MMC_MOUNT_POINT_1 && mkdir $MMC_MOUNT_POINT_2; exit 0

# Creating, verifying and printing partition
03  set -x; echo -e "n\n p\n 1\n $MMC_DEVICE_SECTOR_START\n $MMC_DEVICE_SECTOR_END\n w\n" | fdisk $MMC_ROOT_ENTRY && exit 0 || exit 1
04  set -x; cat $PROCFS_PARTITIONS | grep $MMC_PARTITION_NAME1 && exit 0 || exit 1
05  set -x; echo -e "p\n w\n" | fdisk $MMC_ROOT_ENTRY && exit 0 || exit 1

# Formatting partition
06  set -x; sleep 1 && $TESTBIN/mkdosfs $MMC_PARTITION_ENTRY1 && exit 0 || exit 1

# Mounting, verifying and unmounting partition
07  set -x; mount -t vfat $MMC_PARTITION_ENTRY1 $MMC_MOUNT_POINT_1 && exit 0 || exit 1
08  set -x; mount | grep $MMC_PARTITION_ENTRY1 | grep "vfat" && exit 0 || exit 1
09  set -x; umount $MMC_MOUNT_POINT_1 && sync && exit 0 || exit 1

# Mounting, verifying and unmounting partition
10  set -x; mount -t vfat $MMC_PARTITION_ENTRY1 $MMC_MOUNT_POINT_1 && exit 0 || exit 1
11  set -x; mount | grep $MMC_PARTITION_ENTRY1 | grep "vfat" && exit 0 || exit 1
12  set -x; umount $MMC_MOUNT_POINT_1 && sync && exit 0 || exit 1

# Removing partitions
13  set -x; echo -e "d\n w\n" | fdisk $MMC_ROOT_ENTRY && exit 0 || exit 1

# Verifying partitions
14  set -x; cat $PROCFS_PARTITIONS | grep $MMC_PARTITION_NAME1 && exit 1 || exit 0

# End L_DD_MMC_0003_0001
