# Begin L_DD_MMC_0007_0001
01  set -x; handlerMmcsdBlock.sh "create" "2" "dos-ext2"
02  set -x; handlerTmpfs.sh "create" "250" $MMCSD_TMPFS_MOUNTPOINT
03  set -x; mmc_check_bus_width.sh

04  set -x; handlerCmd.sh "run" "dd if=/dev/urandom of=$MMCSD_TMPFS_MOUNTPOINT/$MMCSD_FILE_SIZE_BIG bs=1M count=200"
05  set -x; handlerCmd.sh "run" "cp $MMCSD_TMPFS_MOUNTPOINT/$MMCSD_FILE_SIZE_BIG $MMCSD_MOUNTPOINT_1 && sync"
06  set -x; handlerCmd.sh "run" "cp $MMCSD_TMPFS_MOUNTPOINT/$MMCSD_FILE_SIZE_BIG $MMCSD_MOUNTPOINT_2 && sync"
07  set -x; handlerCmd.sh "run" "cmp $MMCSD_TMPFS_MOUNTPOINT/$MMCSD_FILE_SIZE_BIG $MMCSD_MOUNTPOINT_1/$MMCSD_FILE_SIZE_BIG"
08  set -x; handlerCmd.sh "run" "cmp $MMCSD_TMPFS_MOUNTPOINT/$MMCSD_FILE_SIZE_BIG $MMCSD_MOUNTPOINT_2/$MMCSD_FILE_SIZE_BIG"

09  set -x; handlerTmpfs.sh "remove" $MMCSD_TMPFS_MOUNTPOINT
10  set -x; handlerMmcsdBlock.sh "remove" "2"

# End L_DD_MMC_0007_0001
