# Begin L_DD_MMC_0006_0002

01  set -x; $TESTSCRIPT/handlerMmcsdBlock.sh "create" "1" "ext2"

02  set -x; $UTILHANDLERS/handlerCpuAffinity.sh "switch" "dd if=/dev/urandom of=/dev/null && sync" "10"

03  set -x; $UTILHANDLERS/handlerCpuAffinity.sh "switch" "dd if=/dev/urandom of=$MMCSD_MOUNTPOINT_1/file.temporal.1 bs=1M count=500 && sync" "10"
04  set -x; $UTILHANDLERS/handlerCpuAffinity.sh "switch" "cp $MMCSD_MOUNTPOINT_1/file.temporal.1 $MMCSD_MOUNTPOINT_1/file.temporal.2" "1"
05  set -x; cmp $MMCSD_MOUNTPOINT_1/file.temporal.1 $MMCSD_MOUNTPOINT_1/file.temporal.2

06  set -x; $TESTSCRIPT/handlerMmcsdBlock.sh "remove" "1"

# End L_DD_MMC_0006_0002