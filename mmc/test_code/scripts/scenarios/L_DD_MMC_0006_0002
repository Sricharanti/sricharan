08 set -x; mount -t ext2 $PARTITION1_ENTRY_DEV1 $MOUNT_POINT1 && exit 0 || exit 1
09 set -x; mount | grep $PARTITION1_ENTRY_DEV1 | grep "ext2" && exit 0 || exit 1

10 set -x; rm -rf $MOUNT_POINT1/* && sync && exit 0 || exit 1

11 set -x; umount $MOUNT_POINT1 && exit 0 || exit 1

12 set -x; echo -e "d\n w\n" | fdisk $ROOT_ENTRY_DEV1 && exit 0 || exit 1
13 set -x; cat /proc/partitions | grep $PARTITION1_NAME_DEV1 && exit 1 || exit 0

