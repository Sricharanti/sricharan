# Begin L_DD_MMC_0005_0005

01  set -x; handlerMmcsdBlock.sh "create" "1" "ext4" "/mnt/mmcsd/"
02  set -x; handlerTmpfs.sh "create" "250" /mnt/tmpfs

03  set -x; handlerCmd.sh "run" "dd if=/dev/urandom of=/mnt/tmpfs/file.tmpfs bs=1M count=100"
04  set -x; handlerCmd.sh "run" "cp /mnt/tmpfs/file.tmpfs /mnt/mmcsd/ && sync"
05  set -x; handlerCmd.sh "run" "cmp /mnt/tmpfs/file.tmpfs /mnt/mmcsd/file.tmpfs"

06  set -x; handlerTmpfs.sh "remove" /mnt/tmpfs/
07  set -x; handlerMmcsdBlock.sh "remove" "1"

# End L_DD_MMC_0005_0005

