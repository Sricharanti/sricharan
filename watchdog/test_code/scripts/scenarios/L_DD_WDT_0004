###################################################################################################################
# Scenario: L_DD_WDT_0004
# Author  : Misael Lopez Cruz
# Date    : March 9, 2007
# Description: Test D0...D3 power management states.
###################################################################################################################

# Begin L_DD_WDT_0004

0001_a	$TESTSCRIPT/pm.sh $SYSFS_POWER_ENTRY_WDT "D0 D1 D2 D3 D2 D1 D0" $TESTWDTIOCTL && exit 0 || exit 1
0001_b	set -x; echo -n $D0_CONSTANT > $SYSFS_POWER_ENTRY_WDT && ($TESTBIN/$TESTWDTIOCTL &) && sleep 1 && echo -n $D3_CONSTANT > $SYSFS_POWER_ENTRY_WDT && killall $TESTWDTIOCTL && echo -n $D0_CONSTANT > $SYSFS_POWER_ENTRY_WDT && exit 0 || exit 1
0001_c	$TESTSCRIPT/pm.sh $SYSFS_POWER_ENTRY_WDT "D0 D1 D2 D3 D2 D1 D0" $TESTWDTWRITE && exit 0 || exit 1
0001_d	set -x; echo -n $D0_CONSTANT > $SYSFS_POWER_ENTRY_WDT && ($TESTBIN/$TESTWDTWRITE &) && sleep 1 && echo -n $D3_CONSTANT > $SYSFS_POWER_ENTRY_WDT && killall $TESTWDTWRITE && echo -n $D0_CONSTANT > $SYSFS_POWER_ENTRY_WDT && exit 0 || exit 1

# End L_DD_WDT_0004
