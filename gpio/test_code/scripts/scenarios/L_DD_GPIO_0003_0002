# Begin L_DD_GPIO_0001_0001

01 set -x; COUNT=20; while [ $COUNT -lt $OMAP_MAX_GPIO_LINES ] ; do insmod $TEST_MODULE test=1 gpio=$COUNT value=1 && rmmod gpio_test ; COUNT=`expr $COUNT + 1` ; done && exit 0 || exit 1
02 set -x; COUNT=20; while [ $COUNT -lt $OMAP_MAX_GPIO_LINES ] ; do insmod $TEST_MODULE test=7 gpio=$COUNT value=1 && rmmod gpio_test ; COUNT=`expr $COUNT + 1` ; done && exit 0 || exit 1
03 set -x; COUNT=20; while [ $COUNT -lt $OMAP_MAX_GPIO_LINES ] ; do insmod $TEST_MODULE test=2 gpio=$COUNT value=1 && rmmod gpio_test ; COUNT=`expr $COUNT + 1` ; done && exit 0 || exit 1

# End L_DD_GPIO_0001_0001


