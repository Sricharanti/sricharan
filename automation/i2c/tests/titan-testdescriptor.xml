<test id="L_DD_I2C_0001_0001">

 <information> 
  <autor> Nishant Menon, Abraham Arce </autor>
  <description> I2C driver shall support all the available I2C hardware modules </description>
  <dateofcreation> 12/5/2008 </dateofcreation>
 </information> 

 <run>
  <action>
    <command>/testsuites/i2c/scripts/test_runner.sh L_DD_I2C_0001_0001</command>
  </action>
  <action>
    <command>rm /testsuites/i2c/scripts/log.*</command>
  </action>
 </run>

 <pass>
  <output>
    <value>stat=0</value>
  </output>
 </pass>

 <fail>
	<timeout time="300"/>
  <output>
    <regularexpression>stat=[^0]\d*</regularexpression>
  </output>
 </fail>

</test>

