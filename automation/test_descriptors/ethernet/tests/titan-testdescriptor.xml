<titan>

<test id="L_DD_ETHERNET_0000_0001">

 <information>
  <autor> Benjamin Mejia </autor>
  <description> Ethernet driver shall support onboard Standard Microsystems Corporation (SMSC) LAN91C96 - TQFP Lan controller </description>
  <dateofcreation> 03/25/2008 </dateofcreation>
 </information>

 <run>
  <action>
    <command>/testsuites/ethernet/scripts/test_runner.sh L_DD_ETHERNET_0000_0001</command>
  </action>
  <action>
    <command>rm /testsuites/ethernet/scripts/log.*</command>
  </action>
 </run>

 <pass>
	<timeout time="60"/>
  <output>
    <value>stat=0</value>
  </output>
 </pass>

 <fail>
  <output>
    <regularexpression>stat=[^0]\d*</regularexpression>
  </output>
 </fail>

</test>

