0001_A	echo "LCD should go off and the system should get suspended" && echo "Tap the touchscreen to wakeup the system" && echo -n mem > /sys/power/state && echo "VALIDATION CRITERIA: System must resume and \"Successfully put chip to retention in suspend\" message should be printed" && $UTILBIN/akey && exit 0 || exit 1
