# Begin L_DD_ACCELEROMETER_0000_0007

exitfn ()
{
	handlerSysFs.sh "set" $ACCELEROMETER_SYSFS_PATH/mode "`cat mode.log`"
	rm mode.log
	exit $1
}

handlerSysFs.sh "get" $ACCELEROMETER_SYSFS_PATH/mode > mode.log

handlerSysFs.sh "set" $ACCELEROMETER_SYSFS_PATH/mode $ACCELEROMETER_MODE_OFF_0

handlerSysFs.sh "compare" $ACCELEROMETER_SYSFS_PATH/mode $ACCELEROMETER_MODE_OFF_0 || exitfn 1

handlerSysFs.sh "set" $ACCELEROMETER_SYSFS_PATH/mode $ACCELEROMETER_MODE_MEAS100

handlerSysFs.sh "compare" $ACCELEROMETER_SYSFS_PATH/mode $ACCELEROMETER_MODE_MEAS100 || exitfn 2

handlerSysFs.sh "set" $ACCELEROMETER_SYSFS_PATH/mode $ACCELEROMETER_MODE_MEAS400

handlerSysFs.sh "compare" $ACCELEROMETER_SYSFS_PATH/mode $ACCELEROMETER_MODE_MEAS400 || exitfn 4

handlerSysFs.sh "set" $ACCELEROMETER_SYSFS_PATH/mode $ACCELEROMETER_MODE_MEAS40

handlerSysFs.sh "compare" $ACCELEROMETER_SYSFS_PATH/mode $ACCELEROMETER_MODE_MEAS40 || exitfn 8

handlerSysFs.sh "set" $ACCELEROMETER_SYSFS_PATH/mode $ACCELEROMETER_MODE_MOTDET

handlerSysFs.sh "compare" $ACCELEROMETER_SYSFS_PATH/mode $ACCELEROMETER_MODE_MOTDET || exitfn 16

handlerSysFs.sh "set" $ACCELEROMETER_SYSFS_PATH/mode $ACCELEROMETER_MODE_FF_100

handlerSysFs.sh "compare" $ACCELEROMETER_SYSFS_PATH/mode $ACCELEROMETER_MODE_FF_100 || exitfn 32

handlerSysFs.sh "set" $ACCELEROMETER_SYSFS_PATH/mode $ACCELEROMETER_MODE_FF_400

handlerSysFs.sh "compare" $ACCELEROMETER_SYSFS_PATH/mode $ACCELEROMETER_MODE_FF_400 || exitfn 64

handlerSysFs.sh "set" $ACCELEROMETER_SYSFS_PATH/mode $ACCELEROMETER_MODE_OFF_7

handlerSysFs.sh "compare" $ACCELEROMETER_SYSFS_PATH/mode $ACCELEROMETER_MODE_OFF_7 || exitfn 128

handlerSysFs.sh "set" $ACCELEROMETER_SYSFS_PATH/mode "`cat mode.log`"

handlerSysFs.sh "compare" $ACCELEROMETER_SYSFS_PATH/mode "`cat mode.log`" || exitfn 254

exitfn 0

# End L_DD_ACCELEROMETER_0000_0007
