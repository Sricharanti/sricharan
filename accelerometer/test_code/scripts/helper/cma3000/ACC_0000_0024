###############################################################################
# Scenario: L_DD_ACCELEROMETER_0000_0024
# Author  : Dan Murphy
# Date    : Mon Nov 1, 2010
###############################################################################

# Begin L_DD_ACCELEROMETER_0000_0024

exitfn ()
{
	handlerSysFs.sh "set" $ACCELEROMETER_SYSFS_PATH/mdthr "`cat mdthr.log`"
	handlerSysFs.sh "set" $ACCELEROMETER_SYSFS_PATH/mode "`cat mode.log`"
	rm mdthr.log
	rm mode.log
	exit $1
}

handlerSysFs.sh "get" $ACCELEROMETER_SYSFS_PATH/mode > mode.log

handlerSysFs.sh "set" $ACCELEROMETER_SYSFS_PATH/mode $ACCELEROMETER_MODE_MEAS400

handlerSysFs.sh "get" $ACCELEROMETER_SYSFS_PATH/mdthr > mdthr.log

handlerOutOfBounds.sh "set" $ACCELEROMETER_SYSFS_PATH/mdthr "-1" || exitfn 1

handlerSysFs.sh "compare" $ACCELEROMETER_SYSFS_PATH/mdthr "`cat mdthr.log`" || exitfn 2

handlerSysFs.sh "set" $ACCELEROMETER_SYSFS_PATH/mdthr "`cat mdthr.log`"

handlerSysFs.sh "compare" $ACCELEROMETER_SYSFS_PATH/mdthr "`cat mdthr.log`" || exitfn 4

handlerSysFs.sh "set" $ACCELEROMETER_SYSFS_PATH/mode "`cat mode.log`"

handlerSysFs.sh "compare" $ACCELEROMETER_SYSFS_PATH/mode "`cat mode.log`" || exitfn 8

exitfn 0

# End L_DD_ACCELEROMETER_0000_0024
