###############################################################################

# Begin L_DD_ACCELEROMETER_0000_0018

exitfn ()
{
	handlerSysFs.sh "set" $ACCELEROMETER_SYSFS_PATH/mode "`cat mode.log`"
	rm mode.log
	exit $1
}

handlerSysFs.sh "get" $ACCELEROMETER_SYSFS_PATH/mode > mode.log

handlerOutOfBounds.sh "set" $ACCELEROMETER_SYSFS_PATH/mode "8" || exitfn 1

handlerSysFs.sh "compare" $ACCELEROMETER_SYSFS_PATH/mode "`cat mode.log`" || exitfn 2

handlerOutOfBounds.sh "set" $ACCELEROMETER_SYSFS_PATH/mode "-1" || exitfn 4

handlerSysFs.sh "compare" $ACCELEROMETER_SYSFS_PATH/mode "`cat mode.log`" || exitfn 8

handlerSysFs.sh "set" $ACCELEROMETER_SYSFS_PATH/mode "`cat mode.log`"

handlerSysFs.sh "compare" $ACCELEROMETER_SYSFS_PATH/mode "`cat mode.log`" || exitfn 16

exitfn 0

# End L_DD_ACCELEROMETER_0000_0018
