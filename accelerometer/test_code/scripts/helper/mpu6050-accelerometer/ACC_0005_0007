###############################################################################
# Scenario: ACC_0005_0007
# Author  : Andrii Danylov
# Date    : 12/21/12
# Testing : CPU idle: OSWR for MPU/CORE/L3/L4 power domains
# Results : Verify MPU/CORE/L3/L4 power domain for RET and RET-LOGIC-OFF counters,
#           they must increases after a period of time through cpu idle path
###############################################################################

# Begin ACC_0005_0007

# Set the max screen timeout (30 min)
#$UTILS_DIR_HANDLERS/handlerAndroidSqlite3.sh set "system" "screen_off_timeout" "1800000"

# set a dummy wakelock to avoid going to suspend
$UTILS_DIR_HANDLERS/handlerAndroidPM.sh wakelock hold dummy

# Turn the display OFF by pressing TWL power key
$UTILS_DIR_SCRIPTS/android_display_switch.sh OFF

# Verify MPU RET and RET-LOGIC-OFF counters (OSWR) increase during a test period
$UTILS_DIR_HANDLERS/handlerPowerTransitionStats.sh log "mpu_pwrdm" "RET" "oswr1"
$UTILS_DIR_HANDLERS/handlerPowerTransitionStats.sh log "mpu_pwrdm" "RET-LOGIC-OFF" "oswr1"
$UTILS_DIR_HANDLERS/handlerPowerTransitionStats.sh log "core_pwrdm" "RET" "oswr1"
$UTILS_DIR_HANDLERS/handlerPowerTransitionStats.sh log "core_pwrdm" "RET-LOGIC-OFF" "oswr1"
$UTILS_DIR_HANDLERS/handlerPowerTransitionStats.sh log "l3init_pwrdm" "RET" "oswr1"
$UTILS_DIR_HANDLERS/handlerPowerTransitionStats.sh log "l3init_pwrdm" "RET-LOGIC-OFF" "oswr1"
$UTILS_DIR_HANDLERS/handlerPowerTransitionStats.sh log "l4per_pwrdm" "RET" "oswr1"
$UTILS_DIR_HANDLERS/handlerPowerTransitionStats.sh log "l4per_pwrdm" "RET-LOGIC-OFF" "oswr1"

if [ -n "$ACCELEROMETER_ENABLE_POWER" ]; then handlerSysFs.sh set $ACCELEROMETER_ENABLE_POWER 1 ; fi
echo "Waiting 20 seconds" && sleep 20 & ($ACCELEROMETER_DIR_BINARIES/evtest $DEVFS_ACCELEROMETER)
$UTILS_DIR_HANDLERS/handlerSysFs.sh set $ACCELEROMETER_ENABLE_POWER 0

$UTILS_DIR_HANDLERS/handlerPowerTransitionStats.sh log "mpu_pwrdm" "RET" "oswr2"
$UTILS_DIR_HANDLERS/handlerPowerTransitionStats.sh log "mpu_pwrdm" "RET-LOGIC-OFF" "oswr2"
$UTILS_DIR_HANDLERS/handlerPowerTransitionStats.sh log "core_pwrdm" "RET" "oswr2"
$UTILS_DIR_HANDLERS/handlerPowerTransitionStats.sh log "core_pwrdm" "RET-LOGIC-OFF" "oswr2"
$UTILS_DIR_HANDLERS/handlerPowerTransitionStats.sh log "l3init_pwrdm" "RET" "oswr2"
$UTILS_DIR_HANDLERS/handlerPowerTransitionStats.sh log "l3init_pwrdm" "RET-LOGIC-OFF" "oswr2"
$UTILS_DIR_HANDLERS/handlerPowerTransitionStats.sh log "l4per_pwrdm" "RET" "oswr2"
$UTILS_DIR_HANDLERS/handlerPowerTransitionStats.sh log "l4per_pwrdm" "RET-LOGIC-OFF" "oswr2"

$UTILS_DIR_HANDLERS/handlerPowerTransitionStats.sh compare "mpu_pwrdm" "RET" "oswr1" "oswr2"
$UTILS_DIR_HANDLERS/handlerPowerTransitionStats.sh compare "mpu_pwrdm" "RET-LOGIC-OFF" "oswr1" "oswr2"
$UTILS_DIR_HANDLERS/handlerPowerTransitionStats.sh compare "core_pwrdm" "RET" "oswr1" "oswr2"
$UTILS_DIR_HANDLERS/handlerPowerTransitionStats.sh compare "core_pwrdm" "RET-LOGIC-OFF" "oswr1" "oswr2"
$UTILS_DIR_HANDLERS/handlerPowerTransitionStats.sh compare "l3init_pwrdm" "RET" "oswr1" "oswr2"
$UTILS_DIR_HANDLERS/handlerPowerTransitionStats.sh compare "l3init_pwrdm" "RET-LOGIC-OFF" "oswr1" "oswr2"
$UTILS_DIR_HANDLERS/handlerPowerTransitionStats.sh compare "l4per_pwrdm" "RET" "oswr1" "oswr2"
$UTILS_DIR_HANDLERS/handlerPowerTransitionStats.sh compare "l4per_pwrdm" "RET-LOGIC-OFF" "oswr1" "oswr2"

$UTILS_DIR_SCRIPTS/android_display_switch.sh ON

$UTILS_DIR_HANDLERS/handlerInputSubsystem.sh "keypad" "KeyCodePowerKey" 1 1 1
sleep 1; input keyevent $KeyMonkeyMenu; input keyevent $KeyMonkeyHome
$UTILS_DIR_HANDLERS/handlerAndroidPM.sh wakelock release dummy

# End ACC_0005_000
