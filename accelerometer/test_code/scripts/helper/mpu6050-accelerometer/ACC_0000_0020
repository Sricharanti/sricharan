###############################################################################
# Scenario: L_DD_ACCELEROMETER_0000_0020
# Author  : Dan Murphy
# Date    : Mon Nov 1, 2010
###############################################################################

# Begin L_DD_ACCELEROMETER_0000_0020

exitfn ()
{
	handlerSysFs.sh "set" $ACCELEROMETER_SYSFS_PATH/grange "`cat grange.log`"
	handlerSysFs.sh "set" $ACCELEROMETER_SYSFS_PATH/mode "`cat mode.log`"
	rm grange.log
	rm mode.log
	exit $1
}

handlerSysFs.sh "get" $ACCELEROMETER_SYSFS_PATH/mode > mode.log

handlerSysFs.sh "set" $ACCELEROMETER_SYSFS_PATH/mode $ACCELEROMETER_MODE_MEAS400

handlerSysFs.sh "get" $ACCELEROMETER_SYSFS_PATH/grange > grange.log

handlerOutOfBounds.sh "set" $ACCELEROMETER_SYSFS_PATH/grange "-1" || exitfn 1

handlerSysFs.sh "compare" $ACCELEROMETER_SYSFS_PATH/grange "`cat grange.log`" || exitfn 2

handlerOutOfBounds.sh "set" $ACCELEROMETER_SYSFS_PATH/grange "4000" || exitfn 4

handlerSysFs.sh "compare" $ACCELEROMETER_SYSFS_PATH/grange "`cat grange.log`" || exitfn 8

handlerOutOfBounds.sh "set" $ACCELEROMETER_SYSFS_PATH/grange "1" || exitfn 16

handlerSysFs.sh "compare" $ACCELEROMETER_SYSFS_PATH/grange "`cat grange.log`" || exitfn 32

handlerOutOfBounds.sh "set" $ACCELEROMETER_SYSFS_PATH/grange "100000" || exitfn 64

handlerSysFs.sh "compare" $ACCELEROMETER_SYSFS_PATH/grange "`cat grange.log`" || exitfn 128

handlerOutOfBounds.sh "set" $ACCELEROMETER_SYSFS_PATH/grange "8001" || exitfn 129

handlerSysFs.sh "compare" $ACCELEROMETER_SYSFS_PATH/grange "`cat grange.log`" || exitfn 130

handlerOutOfBounds.sh "set" $ACCELEROMETER_SYSFS_PATH/grange "7999" || exitfn 132

handlerSysFs.sh "compare" $ACCELEROMETER_SYSFS_PATH/grange "`cat grange.log`" || exitfn 136

handlerOutOfBounds.sh "set" $ACCELEROMETER_SYSFS_PATH/grange "2001" || exitfn 144

handlerSysFs.sh "compare" $ACCELEROMETER_SYSFS_PATH/grange "`cat grange.log`" || exitfn 160

handlerOutOfBounds.sh "set" $ACCELEROMETER_SYSFS_PATH/grange "1999" || exitfn 192

handlerSysFs.sh "compare" $ACCELEROMETER_SYSFS_PATH/grange "`cat grange.log`" || exitfn 225

handlerSysFs.sh "set" $ACCELEROMETER_SYSFS_PATH/grange "`cat grange.log`"

handlerSysFs.sh "compare" $ACCELEROMETER_SYSFS_PATH/grange "`cat grange.log`" || exitfn 226

handlerSysFs.sh "set" $ACCELEROMETER_SYSFS_PATH/mode "`cat mode.log`"

handlerSysFs.sh "compare" $ACCELEROMETER_SYSFS_PATH/mode "`cat mode.log`" || exitfn 228

exitfn 0

# End L_DD_ACCELEROMETER_0000_0020
